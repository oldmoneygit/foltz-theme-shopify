<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <!-- Correção mínima para mobile: prevenir overflow horizontal -->
  <style>
    html, body {
      overflow-x: hidden;
      max-width: 100vw;
    }
    img {
      max-width: 100%;
      height: auto;
    }
  </style>

  <title>{{ page_title }}{{ page_title | default_errors }} | {{ shop.name }}</title>

  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
  {%- endif -%}

  <link rel="canonical" href="{{ canonical_url }}">

  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
  {%- endif -%}

  <!-- CSS -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}

  <!-- Shopify Scripts -->
  {{ content_for_header }}

  <!-- Google Fonts: Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>

<body class="template-{{ template.name }}">

  <!-- Phase 4: Layout structure to be implemented -->

  {% section 'header' %}

  <main id="MainContent" role="main">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  {%- comment %} Toast Notification {%- endcomment -%}
  {%- render 'add-to-cart-toast' -%}

  <!-- JavaScript -->
  {{ 'theme.js' | asset_url | script_tag }}
</body>
</html>
