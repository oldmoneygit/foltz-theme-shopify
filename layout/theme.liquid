<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <!-- Correção mínima para mobile: prevenir overflow horizontal -->
  <style>
    *, *::before, *::after {
      box-sizing: border-box;
    }
    html, body {
      overflow-x: hidden;
      max-width: 100vw;
    }
    img {
      max-width: 100%;
      height: auto;
    }
  </style>

  <title>{{ page_title }}{{ page_title | default_errors }} | {{ shop.name }}</title>

  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
  {%- else -%}
    <meta name="description" content="{{ shop.description | default: shop.name | escape }}">
  {%- endif -%}

  <link rel="canonical" href="{{ canonical_url }}">

  {%- comment -%} Open Graph / Facebook {%- endcomment -%}
  <meta property="og:site_name" content="{{ shop.name }}">
  <meta property="og:url" content="{{ canonical_url }}">
  <meta property="og:title" content="{{ page_title }}{{ page_title | default_errors }}">
  <meta property="og:type" content="{% if template contains 'product' %}product{% elsif template contains 'article' %}article{% else %}website{% endif %}">
  <meta property="og:description" content="{% if page_description %}{{ page_description | escape }}{% else %}{{ shop.description | default: shop.name | escape }}{% endif %}">

  {%- if template contains 'product' and product.featured_image -%}
    <meta property="og:image" content="http:{{ product.featured_image | img_url: '1200x1200' }}">
    <meta property="og:image:secure_url" content="https:{{ product.featured_image | img_url: '1200x1200' }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="1200">
    <meta property="og:image:alt" content="{{ product.featured_image.alt | escape | default: product.title }}">

    {%- if product.variants.first.price -%}
      <meta property="og:price:amount" content="{{ product.variants.first.price | money_without_currency | strip }}">
      <meta property="og:price:currency" content="{{ shop.currency }}">
    {%- endif -%}
  {%- elsif template contains 'article' and article.image -%}
    <meta property="og:image" content="http:{{ article.image | img_url: '1200x1200' }}">
    <meta property="og:image:secure_url" content="https:{{ article.image | img_url: '1200x1200' }}">
  {%- elsif template contains 'collection' and collection.image -%}
    <meta property="og:image" content="http:{{ collection.image | img_url: '1200x1200' }}">
    <meta property="og:image:secure_url" content="https:{{ collection.image | img_url: '1200x1200' }}">
  {%- endif -%}

  {%- comment -%} Twitter Card {%- endcomment -%}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ page_title }}{{ page_title | default_errors }}">
  <meta name="twitter:description" content="{% if page_description %}{{ page_description | escape }}{% else %}{{ shop.description | default: shop.name | escape }}{% endif %}">

  {%- if template contains 'product' and product.featured_image -%}
    <meta name="twitter:image" content="https:{{ product.featured_image | img_url: '1200x1200' }}">
    <meta name="twitter:image:alt" content="{{ product.featured_image.alt | escape | default: product.title }}">
  {%- elsif template contains 'article' and article.image -%}
    <meta name="twitter:image" content="https:{{ article.image | img_url: '1200x1200' }}">
  {%- elsif template contains 'collection' and collection.image -%}
    <meta name="twitter:image" content="https:{{ collection.image | img_url: '1200x1200' }}">
  {%- endif -%}

  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
  {%- endif -%}

  <!-- CSS -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}

  <!-- Shopify Scripts -->
  {{ content_for_header }}

  <!-- Google Fonts: Inter -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>

<body class="template-{{ template.name }}">

  <!-- Phase 4: Layout structure to be implemented -->

  {% section 'header' %}

  <main id="MainContent" role="main">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  {%- comment %} Toast Notification {%- endcomment -%}
  {%- render 'add-to-cart-toast' -%}

  <!-- JavaScript -->
  {{ 'theme.js' | asset_url | script_tag }}
</body>
</html>
