<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <!-- Performance: Resource Hints -->
  <link rel="dns-prefetch" href="https://cdn.shopify.com">
  <link rel="dns-prefetch" href="https://fonts.googleapis.com">
  <link rel="dns-prefetch" href="https://fonts.gstatic.com">
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>

  <!-- Critical CSS Inline - Above the Fold -->
  <style>
    *, *::before, *::after {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    html {
      font-size: 16px;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      -webkit-overflow-scrolling: touch;
    }
    html, body {
      overflow-x: hidden;
      max-width: 100vw;
    }
    body {
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      font-weight: 400;
      line-height: 1.5;
      color: #FFFFFF;
      background: #000000;
    }
    img {
      max-width: 100%;
      height: auto;
      display: block;
    }
    a {
      color: inherit;
      text-decoration: none;
    }
    /* Header Critical Styles */
    .header {
      position: sticky;
      top: 0;
      z-index: 1020;
      background: #000000;
      border-bottom: 2px solid rgba(255, 255, 255, 0.1);
    }
    .promotional-banner {
      background: #DAF10D;
      color: #000000;
      text-align: center;
      padding: 0.5rem 1rem;
      font-size: 0.875rem;
      font-weight: 700;
      text-transform: uppercase;
    }
    /* Hero Critical Styles */
    .hero {
      position: relative;
      height: 70vh;
      overflow: hidden;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    @media (min-width: 768px) {
      .hero { height: 85vh; }
    }
    @media (min-width: 1024px) {
      .hero { height: 100vh; }
    }
    .hero-background {
      position: absolute;
      inset: 0;
      z-index: 0;
    }
    .hero-background img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .hero-content {
      position: relative;
      z-index: 10;
      text-align: center;
      padding: 1rem;
    }
  </style>

  <title>{{ page_title }}{{ page_title | default_errors }} | {{ shop.name }}</title>

  {%- if page_description -%}
    <meta name="description" content="{{ page_description | escape }}">
  {%- else -%}
    <meta name="description" content="{{ shop.description | default: shop.name | escape }}">
  {%- endif -%}

  <link rel="canonical" href="{{ canonical_url }}">

  {%- comment -%} Open Graph / Facebook {%- endcomment -%}
  <meta property="og:site_name" content="{{ shop.name }}">
  <meta property="og:url" content="{{ canonical_url }}">
  <meta property="og:title" content="{{ page_title }}{{ page_title | default_errors }}">
  <meta property="og:type" content="{% if template contains 'product' %}product{% elsif template contains 'article' %}article{% else %}website{% endif %}">
  <meta property="og:description" content="{% if page_description %}{{ page_description | escape }}{% else %}{{ shop.description | default: shop.name | escape }}{% endif %}">

  {%- if template contains 'product' and product.featured_image -%}
    <meta property="og:image" content="http:{{ product.featured_image | img_url: '1200x1200' }}">
    <meta property="og:image:secure_url" content="https:{{ product.featured_image | img_url: '1200x1200' }}">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="1200">
    <meta property="og:image:alt" content="{{ product.featured_image.alt | escape | default: product.title }}">

    {%- if product.variants.first.price -%}
      <meta property="og:price:amount" content="{{ product.variants.first.price | money_without_currency | strip }}">
      <meta property="og:price:currency" content="{{ shop.currency }}">
    {%- endif -%}
  {%- elsif template contains 'article' and article.image -%}
    <meta property="og:image" content="http:{{ article.image | img_url: '1200x1200' }}">
    <meta property="og:image:secure_url" content="https:{{ article.image | img_url: '1200x1200' }}">
  {%- elsif template contains 'collection' and collection.image -%}
    <meta property="og:image" content="http:{{ collection.image | img_url: '1200x1200' }}">
    <meta property="og:image:secure_url" content="https:{{ collection.image | img_url: '1200x1200' }}">
  {%- endif -%}

  {%- comment -%} Twitter Card {%- endcomment -%}
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ page_title }}{{ page_title | default_errors }}">
  <meta name="twitter:description" content="{% if page_description %}{{ page_description | escape }}{% else %}{{ shop.description | default: shop.name | escape }}{% endif %}">

  {%- if template contains 'product' and product.featured_image -%}
    <meta name="twitter:image" content="https:{{ product.featured_image | img_url: '1200x1200' }}">
    <meta name="twitter:image:alt" content="{{ product.featured_image.alt | escape | default: product.title }}">
  {%- elsif template contains 'article' and article.image -%}
    <meta name="twitter:image" content="https:{{ article.image | img_url: '1200x1200' }}">
  {%- elsif template contains 'collection' and collection.image -%}
    <meta name="twitter:image" content="https:{{ collection.image | img_url: '1200x1200' }}">
  {%- endif -%}

  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | img_url: '32x32' }}">
  {%- endif -%}

  <!-- Preload Critical Resources -->
  <link rel="preload" href="{{ 'theme.css' | asset_url }}" as="style">
  <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" as="style">
  
  {%- if template == 'index' -%}
    {%- comment -%} Preload hero image on homepage {%- endcomment -%}
    {%- assign hero_section = sections['hero'] -%}
    {%- if hero_section.settings.background_image_desktop -%}
      <link rel="preload" as="image" href="{{ hero_section.settings.background_image_desktop | img_url: '1500x' }}" imagesrcset="{{ hero_section.settings.background_image_desktop | img_url: '750x' }} 750w, {{ hero_section.settings.background_image_desktop | img_url: '1500x' }} 1500w" imagesizes="100vw">
    {%- endif -%}
  {%- endif -%}

  <!-- CSS - Async Load -->
  {{ 'theme.css' | asset_url | stylesheet_tag }}
  
  <!-- Google Fonts: Inter - Optimized -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
  <noscript>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
  </noscript>

  <!-- Shopify Scripts -->
  {{ content_for_header }}
</head>

<body class="template-{{ template.name }}">

  <!-- Phase 4: Layout structure to be implemented -->

  {% section 'header' %}

  <main id="MainContent" role="main">
    {{ content_for_layout }}
  </main>

  {% section 'footer' %}

  {%- comment %} Toast Notification {%- endcomment -%}
  {%- render 'add-to-cart-toast' -%}

  {%- comment %} FOLTZ AI Chat Widget {%- endcomment -%}
  {%- render 'foltz-widget' -%}

  <!-- JavaScript - Deferred for Performance -->
  <script src="{{ 'image-loader.js' | asset_url }}" defer></script>
  <script src="{{ 'theme.js' | asset_url }}" defer></script>
  <script src="{{ 'sw-register.js' | asset_url }}" defer></script>
</body>
</html>
