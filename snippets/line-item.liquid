<!--
  Snippet: Line Item
  Descrição: Item individual do carrinho (usado em cart e mini-cart)

  Uso:
  {% render 'line-item', item: cart.items[0], index: 1 %}
-->

<style>
  .line-item {
    display: grid;
    grid-template-columns: 80px 1fr auto;
    gap: 16px;
    padding: 16px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .line-item:hover {
    background: rgba(255, 255, 255, 0.08);
  }

  .line-item__image {
    aspect-ratio: 3 / 4;
    border-radius: 6px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
  }

  .line-item__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .line-item__details {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .line-item__title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #FFFFFF;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .line-item__title:hover {
    color: var(--color-brand-yellow);
  }

  .line-item__variant {
    font-size: 0.75rem;
    color: var(--color-text-subdued);
  }

  .line-item__price {
    font-size: 0.875rem;
    color: #FFFFFF;
    margin-top: auto;
  }

  .line-item__price--original {
    text-decoration: line-through;
    color: var(--color-text-subdued);
    margin-right: 6px;
  }

  .line-item__price--sale {
    color: var(--color-brand-yellow);
    font-weight: 600;
  }

  .line-item__actions {
    display: flex;
    flex-direction: column;
    gap: 12px;
    align-items: flex-end;
  }

  .line-item__qty {
    display: flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    padding: 4px 8px;
  }

  .line-item__qty-btn {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    color: #FFFFFF;
    cursor: pointer;
    transition: all 0.3s ease;
    border-radius: 3px;
  }

  .line-item__qty-btn:hover:not(:disabled) {
    background: rgba(218, 241, 13, 0.1);
    color: var(--color-brand-yellow);
  }

  .line-item__qty-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .line-item__qty-value {
    min-width: 24px;
    text-align: center;
    font-size: 0.75rem;
    font-weight: 600;
    color: #FFFFFF;
  }

  .line-item__remove {
    padding: 6px 10px;
    background: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    color: var(--color-text-subdued);
    font-size: 0.75rem;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .line-item__remove:hover {
    border-color: #ef4444;
    color: #ef4444;
    background: rgba(239, 68, 68, 0.1);
  }

  .line-item__total {
    font-size: 1rem;
    font-weight: 700;
    color: #FFFFFF;
  }

  .line-item__discount {
    font-size: 0.625rem;
    color: var(--color-brand-yellow);
  }
</style>

<div class="line-item" data-line-item data-key="{{ item.key }}">
  <div class="line-item__image">
    {%- if item.image -%}
      <img
        src="{{ item.image | img_url: '200x' }}"
        alt="{{ item.image.alt | escape }}"
        loading="lazy"
      >
    {%- else -%}
      {{ 'product-1' | placeholder_svg_tag }}
    {%- endif -%}
  </div>

  <div class="line-item__details">
    <a href="{{ item.url }}" class="line-item__title">
      {{ item.product.title }}
    </a>

    {%- unless item.product.has_only_default_variant -%}
      <div class="line-item__variant">
        {{ item.variant.title }}
      </div>
    {%- endunless -%}

    <div class="line-item__price">
      {%- if item.original_price != item.final_price -%}
        <span class="line-item__price--original">{{ item.original_price | money }}</span>
        <span class="line-item__price--sale">{{ item.final_price | money }}</span>
      {%- else -%}
        {{ item.final_price | money }}
      {%- endif -%}
    </div>

    {%- if item.line_level_discount_allocations.size > 0 -%}
      <div class="line-item__discount">
        {%- for discount_allocation in item.line_level_discount_allocations -%}
          -{{ discount_allocation.amount | money }}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>

  <div class="line-item__actions">
    <div class="line-item__total" data-line-total>
      {{ item.final_line_price | money }}
    </div>

    <div class="line-item__qty">
      <button
        class="line-item__qty-btn"
        data-qty-decrease
        data-key="{{ item.key }}"
        aria-label="Decrease quantity"
        {%- if item.quantity <= 1 -%}disabled{%- endif -%}
      >
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
      </button>

      <span class="line-item__qty-value" data-qty-value>{{ item.quantity }}</span>

      <button
        class="line-item__qty-btn"
        data-qty-increase
        data-key="{{ item.key }}"
        aria-label="Increase quantity"
      >
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
      </button>
    </div>

    <button
      class="line-item__remove"
      data-remove-item
      data-key="{{ item.key }}"
    >
      <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
      Remove
    </button>
  </div>
</div>
