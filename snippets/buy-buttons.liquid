{%- form 'product', product, id: product_form_id -%}
  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}" data-variant-id>

  <div class="buy-buttons-wrapper">
    <button
      type="submit"
      name="add"
      data-add-to-cart
      {% unless product.selected_or_first_available_variant.available %}disabled{% endunless %}
      class="buy-button"
    >
      <svg class="buy-button__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="9" cy="21" r="1"></circle>
        <circle cx="20" cy="21" r="1"></circle>
        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
      </svg>
      <span data-button-text>
        {%- if product.selected_or_first_available_variant.available -%}
          Agregar al Carrito
        {%- else -%}
          Agotado
        {%- endif -%}
      </span>
    </button>

    <button type="button" class="wishlist-button" data-wishlist-button data-product-id="{{ product.id }}">
      <svg class="wishlist-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
      </svg>
      <span class="wishlist-button__text">Favoritos</span>
    </button>
  </div>
{%- endform -%}

<style>
  .buy-buttons-wrapper {
    display: flex;
    gap: 12px;
  }

  .buy-button {
    flex: 1;
    min-height: 48px;
    padding: 14px 16px;
    background: #DAF10D;
    color: #000000;
    font-size: 1rem;
    font-weight: 700;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    box-shadow: 0 4px 12px rgba(218, 241, 13, 0.2);
  }

  @media (min-width: 750px) {
    .buy-button {
      padding: 12px 20px;
      font-size: 1rem;
      gap: 8px;
      border-radius: 12px;
    }
  }

  @media (min-width: 990px) {
    .buy-button {
      padding: 16px 32px;
      font-size: 1.125rem;
      gap: 12px;
    }
  }

  .buy-button:hover:not(:disabled) {
    background: #FAFF00;
    transform: scale(1.05);
    box-shadow: 0 6px 16px rgba(218, 241, 13, 0.3);
  }

  .buy-button:active:not(:disabled) {
    transform: scale(0.95);
  }

  .buy-button:disabled {
    background: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.4);
    cursor: not-allowed;
    box-shadow: none;
  }

  .buy-button.added {
    background: #10B981;
    color: #FFFFFF;
  }

  .buy-button__icon {
    width: 16px;
    height: 16px;
  }

  @media (min-width: 750px) {
    .buy-button__icon {
      width: 20px;
      height: 20px;
    }
  }

  @media (min-width: 990px) {
    .buy-button__icon {
      width: 24px;
      height: 24px;
    }
  }

  .wishlist-button {
    flex-shrink: 0;
    min-height: 48px;
    padding: 14px;
    background: rgba(255, 255, 255, 0.1);
    color: #FFFFFF;
    font-weight: 700;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
  }

  @media (min-width: 750px) {
    .wishlist-button {
      padding: 12px;
      gap: 8px;
      border-radius: 12px;
    }
  }

  @media (min-width: 990px) {
    .wishlist-button {
      padding: 16px;
    }
  }

  .wishlist-button:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  /* Wishlist active state - red theme */
  .wishlist-button.wishlist-active,
  .wishlist-button.active {
    background: transparent;
    color: #FFFFFF;
  }

  .wishlist-button.wishlist-active:hover,
  .wishlist-button.active:hover {
    background: rgba(239, 68, 68, 0.1);
  }

  .wishlist-button.wishlist-active .wishlist-icon,
  .wishlist-button.active .wishlist-icon {
    fill: #EF4444;
    stroke: #EF4444;
  }

  .wishlist-icon {
    width: 16px;
    height: 16px;
  }

  @media (min-width: 750px) {
    .wishlist-icon {
      width: 20px;
      height: 20px;
    }
  }

  @media (min-width: 990px) {
    .wishlist-icon {
      width: 24px;
      height: 24px;
    }
  }

  .wishlist-button__text {
    display: none;
  }

  @media (min-width: 750px) {
    .wishlist-button__text {
      display: inline;
    }
  }

  /* Mobile: reduzir tamanho dos botões */
  @media screen and (max-width: 749px) {
    .buy-button {
      padding: 10px 12px !important;
      font-size: 0.85rem !important;
      min-height: 42px !important;
    }

    .wishlist-button {
      padding: 10px !important;
      min-height: 42px !important;
      min-width: 42px !important;
    }

    .buy-button svg,
    .wishlist-button svg {
      width: 16px !important;
      height: 16px !important;
    }
  }
</style>

<script>
(function() {
  const form = document.querySelector('#{{ product_form_id }}');
  if (!form) return;

  const variantIdInput = form.querySelector('[data-variant-id]');
  const addToCartButton = form.querySelector('[data-add-to-cart]');
  const buttonText = addToCartButton.querySelector('[data-button-text]');
  const wishlistButton = document.querySelector('[data-wishlist-button]');

  // Listen for variant changes
  document.addEventListener('variant:changed', function(e) {
    const variant = e.detail.variant;
    if (!variant) return;

    variantIdInput.value = variant.id;

    if (variant.available) {
      addToCartButton.disabled = false;
      buttonText.textContent = 'Agregar al Carrito';
      addToCartButton.style.opacity = '1';
      addToCartButton.style.cursor = 'pointer';
    } else {
      addToCartButton.disabled = true;
      buttonText.textContent = 'Agotado';
      addToCartButton.style.opacity = '0.5';
      addToCartButton.style.cursor = 'not-allowed';
    }
  });

  // Add to cart with AJAX
  form.addEventListener('submit', async function(e) {
    e.preventDefault();

    if (addToCartButton.disabled) return;

    const formData = new FormData(form);
    const variantId = variantIdInput.value;

    // Show loading state
    addToCartButton.classList.add('added');
    buttonText.textContent = 'Agregando...';

    try {
      const response = await fetch('/cart/add.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          id: variantId,
          quantity: parseInt(form.querySelector('[name="quantity"]')?.value || 1)
        })
      });

      if (!response.ok) throw new Error('Failed to add to cart');

      const item = await response.json();

      // Get product details for toast
      const productData = {
        name: '{{ product.title | escape }}',
        image: item.image || '{{ product.featured_image | image_url: width: 200 }}',
        price: item.price,
        size: item.variant_title || item.options_with_values?.[0]?.value || 'Único',
        quantity: item.quantity
      };

      // Dispatch event to show toast
      document.dispatchEvent(new CustomEvent('product:added-to-cart', {
        detail: productData
      }));

      // Update button state
      buttonText.textContent = '¡Agregado!';

      setTimeout(() => {
        addToCartButton.classList.remove('added');
        buttonText.textContent = 'Agregar al Carrito';
      }, 2000);

      // Dispatch cart update event for mini cart
      document.dispatchEvent(new CustomEvent('cart:updated'));

    } catch (error) {
      console.error('Error adding to cart:', error);
      alert('Error al agregar el producto al carrito. Inténtalo de nuevo.');
      addToCartButton.classList.remove('added');
      buttonText.textContent = 'Agregar al Carrito';
    }
  });

  // Wishlist toggle
  if (wishlistButton) {
    wishlistButton.addEventListener('click', function() {
      this.classList.toggle('active');
      const isActive = this.classList.contains('active');
      const text = this.querySelector('.wishlist-button__text');
      if (text) {
        text.textContent = isActive ? 'Guardado' : 'Favoritos';
      }
    });
  }
})();
</script>
