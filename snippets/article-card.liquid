<!--
  Snippet: Article Card
  Descrição: Card de artigo para listagem no blog

  Uso:
  {% render 'article-card', article: article, show_excerpt: true %}
-->

<style>
  .article-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .article-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(218, 241, 13, 0.3);
    transform: translateY(-4px);
  }

  .article-card__image {
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.05);
    position: relative;
  }

  .article-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .article-card:hover .article-card__image img {
    transform: scale(1.05);
  }

  .article-card__content {
    padding: 24px;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .article-card__title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 12px;
    line-height: 1.4;
    text-decoration: none;
    display: block;
    transition: color 0.3s ease;
  }

  .article-card__title:hover {
    color: var(--color-brand-yellow);
  }

  .article-card__excerpt {
    font-size: 0.875rem;
    color: var(--color-text-subdued);
    line-height: 1.6;
    margin-bottom: 16px;
    flex: 1;
  }

  .article-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 16px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .article-card__read-more {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-brand-yellow);
    text-decoration: none;
    transition: gap 0.3s ease;
  }

  .article-card__read-more:hover {
    gap: 10px;
  }

  @media (max-width: 768px) {
    .article-card__content {
      padding: 20px;
    }

    .article-card__title {
      font-size: 1.125rem;
    }
  }
</style>

{%- liquid
  assign card_article = article
  assign card_show_excerpt = show_excerpt | default: true
-%}

<article class="article-card">
  {%- if card_article.image -%}
    <a href="{{ card_article.url }}" class="article-card__image">
      <img
        src="{{ card_article.image | img_url: '600x' }}"
        alt="{{ card_article.image.alt | escape }}"
        loading="lazy"
      >
    </a>
  {%- endif -%}

  <div class="article-card__content">
    {%- render 'article-meta', article: card_article, show_author: false, show_date: true, compact: true -%}

    <a href="{{ card_article.url }}" class="article-card__title">
      {{ card_article.title }}
    </a>

    {%- if card_show_excerpt and card_article.excerpt != blank -%}
      <div class="article-card__excerpt">
        {{ card_article.excerpt | strip_html | truncatewords: 25 }}
      </div>
    {%- endif -%}

    <div class="article-card__footer">
      <a href="{{ card_article.url }}" class="article-card__read-more">
        {{ 'blog.article.read_more' | t }}
        {%- render 'icon', name: 'arrow-right', size: 16 -%}
      </a>
    </div>
  </div>
</article>
