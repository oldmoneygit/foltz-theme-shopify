<!--
  Snippet: Add to Cart Toast
  Toast notification shown when product is added to cart
-->

<style>
  .add-to-cart-toast {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    padding: 16px;
    display: none;
    justify-content: center;
    pointer-events: none;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast {
      top: 16px;
      bottom: auto;
      left: auto;
      right: 16px;
      justify-content: flex-end;
      padding: 0;
    }
  }

  .add-to-cart-toast.active {
    display: flex;
  }

  .add-to-cart-toast__container {
    width: 100%;
    max-width: 32rem;
    pointer-events: auto;
    background: #000000;
    border: 2px solid rgba(16, 185, 129, 0.5);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 25px 50px -12px rgba(16, 185, 129, 0.2);
    transform: translateY(100px);
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .add-to-cart-toast.active .add-to-cart-toast__container {
    transform: translateY(0);
    opacity: 1;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__container {
      max-width: 36rem;
    }
  }

  .add-to-cart-toast__header {
    background: linear-gradient(to right, #059669, #10B981);
    padding: 14px 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__header {
      padding: 16px 24px;
    }
  }

  .add-to-cart-toast__header-content {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .add-to-cart-toast__icon-wrapper {
    width: 32px;
    height: 32px;
    background: #FFFFFF;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__icon-wrapper {
      width: 36px;
      height: 36px;
    }
  }

  .add-to-cart-toast__icon {
    width: 20px;
    height: 20px;
    color: #059669;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__icon {
      width: 24px;
      height: 24px;
    }
  }

  .add-to-cart-toast__title {
    font-size: 1rem;
    font-weight: 700;
    color: #FFFFFF;
    margin: 0;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__title {
      font-size: 1.125rem;
    }
  }

  .add-to-cart-toast__close {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    color: #FFFFFF;
    cursor: pointer;
    border-radius: 8px;
    transition: background 0.2s ease;
  }

  .add-to-cart-toast__close:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .add-to-cart-toast__close svg {
    width: 16px;
    height: 16px;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__close svg {
      width: 20px;
      height: 20px;
    }
  }

  .add-to-cart-toast__body {
    background: #18181B;
    padding: 20px;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__body {
      padding: 24px;
    }
  }

  .add-to-cart-toast__product {
    display: flex;
    gap: 16px;
    margin-bottom: 20px;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__product {
      gap: 20px;
    }
  }

  .add-to-cart-toast__image {
    width: 80px;
    height: 80px;
    background: #FFFFFF;
    border-radius: 12px;
    overflow: hidden;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 4px;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__image {
      width: 96px;
      height: 96px;
    }
  }

  .add-to-cart-toast__image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .add-to-cart-toast__info {
    flex: 1;
    min-width: 0;
  }

  .add-to-cart-toast__product-name {
    font-size: 1rem;
    font-weight: 700;
    color: #FFFFFF;
    margin: 0 0 8px 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__product-name {
      font-size: 1.125rem;
    }
  }

  .add-to-cart-toast__details {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 8px;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__details {
      gap: 16px;
      font-size: 1rem;
    }
  }

  .add-to-cart-toast__detail-value {
    color: #DAF10D;
    font-weight: 600;
  }

  .add-to-cart-toast__price {
    font-size: 1.125rem;
    font-weight: 700;
    color: #DAF10D;
    margin: 0;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__price {
      font-size: 1.25rem;
    }
  }

  .add-to-cart-toast__actions {
    display: flex;
    gap: 12px;
  }

  .add-to-cart-toast__button {
    flex: 1;
    padding: 12px 20px;
    border: none;
    border-radius: 12px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    white-space: nowrap;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__button {
      font-size: 1rem;
    }
  }

  .add-to-cart-toast__button--secondary {
    background: rgba(255, 255, 255, 0.1);
    color: #FFFFFF;
  }

  .add-to-cart-toast__button--secondary:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .add-to-cart-toast__button--primary {
    background: #DAF10D;
    color: #000000;
    font-weight: 700;
  }

  .add-to-cart-toast__button--primary:hover {
    background: #FAFF00;
  }

  .add-to-cart-toast__button svg {
    width: 16px;
    height: 16px;
  }

  @media (min-width: 768px) {
    .add-to-cart-toast__button svg {
      width: 20px;
      height: 20px;
    }
  }

  .add-to-cart-toast__progress {
    height: 4px;
    background: #10B981;
    transform-origin: left;
    animation: progress 5s linear forwards;
  }

  @keyframes progress {
    from {
      transform: scaleX(1);
    }
    to {
      transform: scaleX(0);
    }
  }
</style>

<div class="add-to-cart-toast" data-toast>
  <div class="add-to-cart-toast__container">
    <div class="add-to-cart-toast__header">
      <div class="add-to-cart-toast__header-content">
        <div class="add-to-cart-toast__icon-wrapper">
          <svg class="add-to-cart-toast__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        </div>
        <h3 class="add-to-cart-toast__title">¡Agregado al Carrito!</h3>
      </div>
      <button class="add-to-cart-toast__close" data-toast-close aria-label="Cerrar">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="add-to-cart-toast__body">
      <div class="add-to-cart-toast__product">
        <div class="add-to-cart-toast__image" data-toast-image>
          <img src="" alt="" data-toast-img>
        </div>

        <div class="add-to-cart-toast__info">
          <h4 class="add-to-cart-toast__product-name" data-toast-name></h4>
          <div class="add-to-cart-toast__details">
            <span>Talla: <span class="add-to-cart-toast__detail-value" data-toast-size></span></span>
            <span>•</span>
            <span>Cantidad: <span class="add-to-cart-toast__detail-value" data-toast-quantity></span></span>
          </div>
          <p class="add-to-cart-toast__price" data-toast-price></p>
        </div>
      </div>

      <div class="add-to-cart-toast__actions">
        <button class="add-to-cart-toast__button add-to-cart-toast__button--secondary" data-toast-close>
          Seguir Comprando
        </button>
        <a href="/cart" class="add-to-cart-toast__button add-to-cart-toast__button--primary">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <span>Ver Carrito</span>
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </a>
      </div>
    </div>

    <div class="add-to-cart-toast__progress"></div>
  </div>
</div>

<script>
(function() {
  const toast = document.querySelector('[data-toast]');
  if (!toast) return;

  let toastTimer = null;

  function showToast(product) {
    // Update toast content
    const img = toast.querySelector('[data-toast-img]');
    const name = toast.querySelector('[data-toast-name]');
    const size = toast.querySelector('[data-toast-size]');
    const quantity = toast.querySelector('[data-toast-quantity]');
    const price = toast.querySelector('[data-toast-price]');

    if (img) {
      img.src = product.image || '/images/placeholder-product.jpg';
      img.alt = product.name;
    }
    if (name) name.textContent = product.name;
    if (size) size.textContent = product.size;
    if (quantity) quantity.textContent = product.quantity;
    if (price) price.textContent = formatMoney(product.price);

    // Show toast
    toast.classList.add('active');

    // Reset progress animation
    const progress = toast.querySelector('.add-to-cart-toast__progress');
    if (progress) {
      progress.style.animation = 'none';
      progress.offsetHeight; // Force reflow
      progress.style.animation = 'progress 5s linear forwards';
    }

    // Auto close after 5 seconds
    if (toastTimer) clearTimeout(toastTimer);
    toastTimer = setTimeout(() => {
      hideToast();
    }, 5000);
  }

  function hideToast() {
    toast.classList.remove('active');
    if (toastTimer) {
      clearTimeout(toastTimer);
      toastTimer = null;
    }
  }

  // Close buttons
  const closeButtons = toast.querySelectorAll('[data-toast-close]');
  closeButtons.forEach(button => {
    button.addEventListener('click', hideToast);
  });

  // Listen for add to cart events
  document.addEventListener('product:added-to-cart', (e) => {
    showToast(e.detail);
  });

  // Format money helper
  function formatMoney(cents) {
    const amount = (cents / 100).toFixed(2);
    return '{{ cart.currency.symbol }}' + amount.replace(/\B(?=(\d{3})+(?!\d))/g, ',');
  }

  // Make showToast available globally
  window.showAddToCartToast = showToast;
})();
</script>
