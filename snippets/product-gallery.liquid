<style>
  .product-gallery {
    position: relative;
  }

  .product-gallery__main {
    position: relative;
    aspect-ratio: 3 / 4;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 16px;
  }

  .product-gallery__main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-gallery__badge {
    position: absolute;
    top: 16px;
    left: 16px;
    padding: 8px 16px;
    background: var(--color-brand-yellow);
    color: #000000;
    font-size: 0.75rem;
    font-weight: 700;
    border-radius: 16px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .product-gallery__thumbnails {
    display: flex;
    gap: 12px;
    overflow-x: auto;
  }

  .product-gallery__thumbnail {
    flex-shrink: 0;
    width: 80px;
    aspect-ratio: 3 / 4;
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .product-gallery__thumbnail:hover {
    border-color: rgba(218, 241, 13, 0.5);
  }

  .product-gallery__thumbnail.active {
    border-color: var(--color-brand-yellow);
  }

  .product-gallery__thumbnail-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

<div class="product-gallery">
  <div class="product-gallery__main" id="main-image-{{ section.id }}">
    {%- if product.featured_image -%}
      <img
        src="{{ product.featured_image | img_url: '1200x' }}"
        alt="{{ product.title }}"
        class="product-gallery__main-image"
        id="main-product-image-{{ section.id }}"
        loading="eager"
      >
    {%- else -%}
      {{ 'product-1' | placeholder_svg_tag: 'product-gallery__main-image' }}
    {%- endif -%}

    {%- if product.compare_at_price_max > product.price -%}
      {%- assign savings_percent = product.compare_at_price_max | minus: product.price | times: 100 | divided_by: product.compare_at_price_max -%}
      <div class="product-gallery__badge">
        -{{ savings_percent }}%
      </div>
    {%- endif -%}
  </div>

  {%- if product.images.size > 1 -%}
    <div class="product-gallery__thumbnails">
      {%- for image in product.images limit: 6 -%}
        <div
          class="product-gallery__thumbnail {% if forloop.first %}active{% endif %}"
          onclick="changeImage{{ section.id }}('{{ image | img_url: '1200x' }}', this)"
        >
          <img
            src="{{ image | img_url: '200x' }}"
            alt="{{ product.title }}"
            class="product-gallery__thumbnail-image"
            loading="lazy"
          >
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}
</div>

<script>
  function changeImage{{ section.id }}(imageSrc, thumbnail) {
    const mainImage = document.getElementById('main-product-image-{{ section.id }}');
    const thumbnails = document.querySelectorAll('.product-gallery__thumbnail');

    if (mainImage) {
      mainImage.src = imageSrc;
    }

    thumbnails.forEach(thumb => {
      thumb.classList.remove('active');
    });

    thumbnail.classList.add('active');
  }
</script>
