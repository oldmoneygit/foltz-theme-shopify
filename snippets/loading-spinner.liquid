<!--
  Snippet: Loading Spinner
  Descrição: Spinner de carregamento

  Uso:
  {% render 'loading-spinner', size: 'default' %}
  {% render 'loading-spinner', size: 'small', color: 'yellow' %}
-->

<style>
  .loading-spinner {
    display: inline-block;
    position: relative;
  }

  .loading-spinner--small {
    width: 20px;
    height: 20px;
  }

  .loading-spinner--default {
    width: 40px;
    height: 40px;
  }

  .loading-spinner--large {
    width: 60px;
    height: 60px;
  }

  .loading-spinner__circle {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    border: 3px solid;
    border-color: transparent;
    border-top-color: currentColor;
    animation: loading-spinner-spin 0.8s linear infinite;
  }

  .loading-spinner--yellow {
    color: var(--color-brand-yellow);
  }

  .loading-spinner--white {
    color: #FFFFFF;
  }

  .loading-spinner--black {
    color: #000000;
  }

  @keyframes loading-spinner-spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>

{%- liquid
  assign spinner_size = size | default: 'default'
  assign spinner_color = color | default: 'yellow'
  assign spinner_class = class | default: ''

  assign spinner_classes = 'loading-spinner'
  assign spinner_classes = spinner_classes | append: ' loading-spinner--' | append: spinner_size
  assign spinner_classes = spinner_classes | append: ' loading-spinner--' | append: spinner_color

  if spinner_class != blank
    assign spinner_classes = spinner_classes | append: ' ' | append: spinner_class
  endif
-%}

<div class="{{ spinner_classes }}" aria-label="Loading">
  <div class="loading-spinner__circle"></div>
</div>
