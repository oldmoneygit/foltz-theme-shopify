<!--
  Snippet: Social Meta Tags
  Descrição: Open Graph e Twitter Cards para compartilhamento em redes sociais

  Uso (no <head> do theme.liquid):
  {% render 'social-meta-tags' %}
-->

{%- liquid
  # Página atual
  assign og_url = canonical_url | default: shop.url
  assign og_type = 'website'
  assign og_title = page_title | default: shop.name
  assign og_description = page_description | default: shop.description | default: shop.name

  # Imagem padrão
  assign og_image = ''
  assign og_image_width = ''
  assign og_image_height = ''

  # Twitter card type
  assign twitter_card = 'summary_large_image'
-%}

{%- comment -%} Product Page {%- endcomment -%}
{%- if template.name == 'product' -%}
  {%- liquid
    assign og_type = 'product'
    assign og_title = product.title | escape
    assign og_description = product.description | strip_html | truncatewords: 30 | escape

    if product.featured_media
      assign og_image = product.featured_media | img_url: '1200x1200'
      assign og_image_width = '1200'
      assign og_image_height = '1200'
    endif
  -%}

  <!-- Open Graph - Product -->
  <meta property="og:type" content="product">
  <meta property="product:price:amount" content="{{ product.selected_or_first_available_variant.price | money_without_currency }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
  {%- if product.available -%}
    <meta property="product:availability" content="in stock">
  {%- else -%}
    <meta property="product:availability" content="out of stock">
  {%- endif -%}
  {%- if product.vendor -%}
    <meta property="product:brand" content="{{ product.vendor | escape }}">
  {%- endif -%}

{%- comment -%} Collection Page {%- endcomment -%}
{%- elsif template.name == 'collection' -%}
  {%- liquid
    assign og_type = 'product.group'
    assign og_title = collection.title | escape
    assign og_description = collection.description | strip_html | truncatewords: 30 | escape

    if collection.image
      assign og_image = collection.image | img_url: '1200x630'
      assign og_image_width = '1200'
      assign og_image_height = '630'
    elsif collection.products.first and collection.products.first.featured_media
      assign og_image = collection.products.first.featured_media | img_url: '1200x630'
      assign og_image_width = '1200'
      assign og_image_height = '630'
    endif
  -%}

{%- comment -%} Article Page {%- endcomment -%}
{%- elsif template.name == 'article' -%}
  {%- liquid
    assign og_type = 'article'
    assign og_title = article.title | escape
    assign og_description = article.excerpt_or_content | strip_html | truncatewords: 30 | escape

    if article.image
      assign og_image = article.image | img_url: '1200x630'
      assign og_image_width = '1200'
      assign og_image_height = '630'
    endif
  -%}

  <!-- Open Graph - Article -->
  {%- if article.published_at -%}
    <meta property="article:published_time" content="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%SZ' }}">
  {%- endif -%}
  {%- if article.author -%}
    <meta property="article:author" content="{{ article.author | escape }}">
  {%- endif -%}
  {%- for tag in article.tags -%}
    <meta property="article:tag" content="{{ tag | escape }}">
  {%- endfor -%}

{%- comment -%} Page {%- endcomment -%}
{%- elsif template.name == 'page' -%}
  {%- liquid
    assign og_title = page.title | escape
    assign og_description = page.content | strip_html | truncatewords: 30 | escape
  -%}

{%- comment -%} Search Page {%- endcomment -%}
{%- elsif template.name == 'search' -%}
  {%- liquid
    assign og_title = 'Search: ' | append: search.terms | escape
    if search.performed
      assign og_description = 'Search results for: ' | append: search.terms | escape
    else
      assign og_description = 'Search our store' | escape
    endif
  -%}
{%- endif -%}

{%- comment -%} Fallback image {%- endcomment -%}
{%- if og_image == blank -%}
  {%- if settings.share_image -%}
    {%- assign og_image = settings.share_image | img_url: '1200x630' -%}
    {%- assign og_image_width = '1200' -%}
    {%- assign og_image_height = '630' -%}
  {%- elsif shop.brand.logo -%}
    {%- assign og_image = shop.brand.logo | img_url: '1200x630' -%}
    {%- assign og_image_width = '1200' -%}
    {%- assign og_image_height = '630' -%}
  {%- endif -%}
{%- endif -%}

<!-- Open Graph -->
<meta property="og:site_name" content="{{ shop.name | escape }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description }}">
{%- if og_image -%}
  <meta property="og:image" content="https:{{ og_image }}">
  <meta property="og:image:secure_url" content="https:{{ og_image }}">
  {%- if og_image_width -%}
    <meta property="og:image:width" content="{{ og_image_width }}">
  {%- endif -%}
  {%- if og_image_height -%}
    <meta property="og:image:height" content="{{ og_image_height }}">
  {%- endif -%}
  <meta property="og:image:alt" content="{{ og_title }}">
{%- endif -%}

<!-- Twitter Card -->
<meta name="twitter:card" content="{{ twitter_card }}">
<meta name="twitter:title" content="{{ og_title }}">
<meta name="twitter:description" content="{{ og_description }}">
{%- if og_image -%}
  <meta name="twitter:image" content="https:{{ og_image }}">
  <meta name="twitter:image:alt" content="{{ og_title }}">
{%- endif -%}
{%- if settings.twitter_handle != blank -%}
  <meta name="twitter:site" content="@{{ settings.twitter_handle | remove: '@' }}">
  <meta name="twitter:creator" content="@{{ settings.twitter_handle | remove: '@' }}">
{%- endif -%}

<!-- Facebook Domain Verification -->
{%- if settings.facebook_domain_verification != blank -%}
  <meta name="facebook-domain-verification" content="{{ settings.facebook_domain_verification }}">
{%- endif -%}

<!-- Pinterest -->
{%- if settings.pinterest_verification != blank -%}
  <meta name="p:domain_verify" content="{{ settings.pinterest_verification }}">
{%- endif -%}
