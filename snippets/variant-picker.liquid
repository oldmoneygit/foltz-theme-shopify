</style>

<script>
(function() {
  const variantPicker = document.querySelector('.variant-picker');
  if (!variantPicker) return;

  const form = document.querySelector('#{{ product_form_id }}');
  if (!form) return;

  const radioButtons = variantPicker.querySelectorAll('.variant-radio');
  const selectedDisplays = variantPicker.querySelectorAll('.variant-picker__selected');

  radioButtons.forEach((radio, index) => {
    radio.addEventListener('change', function() {
      if (this.checked) {
        // Update selected display
        const fieldset = this.closest('.variant-picker__option');
        const selectedDisplay = fieldset.querySelector('.variant-picker__selected');
        if (selectedDisplay) {
          selectedDisplay.textContent = this.value;
        }

        // Trigger variant change event
        const event = new CustomEvent('variant:changed', {
          bubbles: true,
          detail: {
            optionName: this.name,
            optionValue: this.value
          }
        });
        document.dispatchEvent(event);
      }
    });
  });

  // Size Guide Modal Control
  const sizeGuideModal = document.getElementById('size-guide-modal');
  const openModalBtn = document.getElementById('open-size-guide-modal');
  const closeModalBtn = document.getElementById('close-size-guide-modal');
  const modalOverlay = document.getElementById('size-guide-modal-overlay');

  function openModal() {
    if (sizeGuideModal) {
      sizeGuideModal.classList.add('is-open');
      document.body.classList.add('modal-open');

      // Add focus trap
      sizeGuideModal.setAttribute('role', 'dialog');
      sizeGuideModal.setAttribute('aria-modal', 'true');
      closeModalBtn.focus();
    }
  }

  function closeModal() {
    if (sizeGuideModal) {
      sizeGuideModal.classList.remove('is-open');
      document.body.classList.remove('modal-open');

      // Return focus to trigger button
      if (openModalBtn) {
        openModalBtn.focus();
      }
    }
  }

  if (openModalBtn) {
    openModalBtn.addEventListener('click', openModal);
  }

  if (closeModalBtn) {
    closeModalBtn.addEventListener('click', closeModal);
  }

  if (modalOverlay) {
    modalOverlay.addEventListener('click', closeModal);
  }

  // Close modal with ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && sizeGuideModal && sizeGuideModal.classList.contains('is-open')) {
      closeModal();
    }
  });
})();
</script>
