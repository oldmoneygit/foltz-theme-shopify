      </div>
    </div>
  </div>
</section>

<style>
/* FAQ Page Section */
.faq-page-section {
  background: #000;
  min-height: 100vh;
  padding: 2rem 0 4rem;
  position: relative;
  overflow: hidden;
  color: #fff;
}

.faq-page-section::before {
  content: '';
  position: absolute;
  top: -200px;
  left: 50%;
  transform: translateX(-50%);
  width: 1000px;
  height: 1000px;
  background: radial-gradient(circle, rgba(218, 241, 13, 0.08) 0%, transparent 70%);
  pointer-events: none;
  z-index: 0;
}

.faq-page__container {
  max-width: 900px;
  margin: 0 auto;
  padding: 0 1rem;
  position: relative;
  z-index: 1;
}

/* Header */
.faq-page__header {
  padding: 2rem 0 3rem;
  text-align: center;
  max-width: 800px;
  margin: 0 auto;
}

.faq-page__header-icon-wrapper {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  margin: 0 auto 2rem;
  background: linear-gradient(135deg, rgba(218, 241, 13, 0.2), rgba(218, 241, 13, 0.05));
  border: 2px solid rgba(218, 241, 13, 0.3);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(218, 241, 13, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 20px 10px rgba(218, 241, 13, 0);
  }
}

.faq-page__header-icon {
  color: #DAF10D;
}

.faq-page__title {
  font-size: 2rem;
  font-weight: 900;
  text-transform: uppercase;
  margin: 0 0 1rem 0;
  line-height: 1.1;
  letter-spacing: 0.02em;
}

@media (min-width: 768px) {
  .faq-page__title {
    font-size: 3rem;
  }
}

.faq-page__title-highlight {
  color: #DAF10D;
}

.faq-page__subtitle {
  font-size: 1rem;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
  margin: 0;
}

@media (min-width: 768px) {
  .faq-page__subtitle {
    font-size: 1.125rem;
  }
}

/* Search */
.faq-page__search-wrapper {
  margin-bottom: 3rem;
}

.faq-page__search-container {
  position: relative;
}

.faq-page__search-icon {
  position: absolute;
  left: 1rem;
  top: 50%;
  transform: translateY(-50%);
  color: rgba(255, 255, 255, 0.4);
  pointer-events: none;
  transition: color 0.3s ease;
}

.faq-page__search-input {
  width: 100%;
  background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.02));
  backdrop-filter: blur(20px);
  border: 2px solid rgba(255, 255, 255, 0.15);
  border-radius: 0.75rem;
  padding: 1rem 1rem 1rem 3rem;
  color: #fff;
  font-size: 1rem;
  transition: all 0.3s ease;
  font-weight: 500;
}

.faq-page__search-input::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.faq-page__search-input:focus {
  border-color: #DAF10D;
  outline: none;
  background: rgba(0, 0, 0, 0.6);
  box-shadow: 0 0 0 4px rgba(218, 241, 13, 0.1);
}

.faq-page__search-input:focus + .faq-page__search-icon {
  color: #DAF10D;
}

/* Categories */
.faq-page__categories {
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

.faq-page__category-title {
  font-size: 1.5rem;
  font-weight: 900;
  color: #DAF10D;
  margin: 0 0 1.5rem 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

@media (min-width: 768px) {
  .faq-page__category-title {
    font-size: 1.75rem;
  }
}

.faq-page__questions {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

/* Question Item */
.faq-page__question-item {
  background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.08), rgba(255, 255, 255, 0.02));
  backdrop-filter: blur(20px);
  border-radius: 1rem;
  border: 1px solid rgba(255, 255, 255, 0.15);
  overflow: hidden;
  transition: all 0.3s ease;
}

.faq-page__question-item:hover {
  border-color: rgba(218, 241, 13, 0.4);
  box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
  transform: translateY(-2px);
}

.faq-page__question-item.is-open {
  border-color: rgba(218, 241, 13, 0.5);
  box-shadow: 0 12px 30px rgba(218, 241, 13, 0.15);
}

.faq-page__question-btn {
  width: 100%;
  padding: 1.25rem 1.5rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 1rem;
  background: transparent;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: left;
}

.faq-page__question-btn:hover {
  background: rgba(255, 255, 255, 0.05);
}

.faq-page__question-text {
  color: #fff;
  font-weight: 700;
  flex: 1;
  font-size: 0.9375rem;
  letter-spacing: 0.02em;
}

.faq-page__chevron {
  color: #DAF10D;
  flex-shrink: 0;
  transition: transform 0.3s ease;
}

.faq-page__question-item.is-open .faq-page__chevron {
  transform: rotate(180deg);
}

.faq-page__answer {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease, padding 0.3s ease;
  color: rgba(255, 255, 255, 0.85);
  line-height: 1.7;
  font-size: 0.9375rem;
}

.faq-page__question-item.is-open .faq-page__answer {
  max-height: 500px;
  padding: 0 1.5rem 1.25rem 1.5rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 1.25rem;
}

/* CTA */
.faq-page__cta {
  margin-top: 3rem;
  background: linear-gradient(135deg, rgba(218, 241, 13, 0.15), rgba(218, 241, 13, 0.05));
  border: 2px solid rgba(218, 241, 13, 0.3);
  border-radius: 1.5rem;
  padding: 2rem;
  text-align: center;
  transition: all 0.3s ease;
  backdrop-filter: blur(20px);
}

@media (min-width: 768px) {
  .faq-page__cta {
    padding: 2.5rem;
  }
}

.faq-page__cta:hover {
  border-color: rgba(218, 241, 13, 0.5);
  box-shadow: 0 20px 40px rgba(218, 241, 13, 0.2);
  transform: translateY(-4px);
}

.faq-page__cta-icon {
  color: #DAF10D;
  margin: 0 auto 1.5rem;
}

.faq-page__cta-title {
  font-size: 1.25rem;
  font-weight: 900;
  margin: 0 0 1rem 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
