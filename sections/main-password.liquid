<!--
  Section: Password Page
  Descrição: Página de senha/manutenção para loja não publicada
-->

<style>
  .password-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 24px;
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
    text-align: center;
  }

  .password-page__container {
    max-width: 600px;
    width: 100%;
  }

  .password-page__logo {
    margin-bottom: 40px;
  }

  .password-page__logo-img {
    max-width: 200px;
    height: auto;
  }

  .password-page__title {
    font-size: 3rem;
    font-weight: 900;
    color: var(--color-brand-yellow);
    margin-bottom: 16px;
    text-shadow: 0 0 40px rgba(218, 241, 13, 0.3);
  }

  .password-page__subtitle {
    font-size: 1.5rem;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 24px;
  }

  .password-page__message {
    font-size: 1.125rem;
    color: var(--color-text-subdued);
    margin-bottom: 40px;
    line-height: 1.6;
  }

  .password-page__form {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 32px;
    margin-bottom: 40px;
  }

  .password-page__input-wrapper {
    display: flex;
    gap: 12px;
    margin-bottom: 16px;
  }

  .password-page__input {
    flex: 1;
    padding: 14px 16px;
    background: #FFFFFF;
    border: 2px solid #000000;
    border-radius: 8px;
    font-size: 1rem;
    color: #000000;
    transition: all 0.3s ease;
  }

  .password-page__input:focus {
    outline: none;
    border-color: var(--color-brand-yellow);
    box-shadow: 0 0 0 3px rgba(218, 241, 13, 0.1);
  }

  .password-page__submit {
    padding: 14px 32px;
    background: var(--color-brand-yellow);
    color: #000000;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .password-page__submit:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .password-page__errors {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid #EF4444;
    border-radius: 8px;
    padding: 12px 16px;
    color: #EF4444;
    font-size: 0.875rem;
    margin-bottom: 16px;
  }

  .password-page__newsletter {
    margin-top: 48px;
    padding-top: 48px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .password-page__newsletter-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #FFFFFF;
    margin-bottom: 16px;
  }

  .password-page__newsletter-text {
    font-size: 0.875rem;
    color: var(--color-text-subdued);
    margin-bottom: 24px;
  }

  .password-page__social {
    margin-top: 40px;
    display: flex;
    gap: 16px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .password-page__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    color: #FFFFFF;
    transition: all 0.3s ease;
  }

  .password-page__social-link:hover {
    background: rgba(218, 241, 13, 0.1);
    border-color: var(--color-brand-yellow);
    color: var(--color-brand-yellow);
  }

  @media (max-width: 768px) {
    .password-page__title {
      font-size: 2rem;
    }

    .password-page__subtitle {
      font-size: 1.25rem;
    }

    .password-page__input-wrapper {
      flex-direction: column;
    }

    .password-page__submit {
      width: 100%;
    }
  }
</style>

<div class="password-page">
  <div class="password-page__container">
    {%- if section.settings.logo -%}
      <div class="password-page__logo">
        <img
          src="{{ section.settings.logo | img_url: '400x' }}"
          alt="{{ shop.name }}"
          class="password-page__logo-img"
          loading="eager"
        >
      </div>
    {%- endif -%}

    <h1 class="password-page__title">{{ section.settings.title | default: shop.name }}</h1>
    <h2 class="password-page__subtitle">{{ section.settings.subtitle | default: 'Coming Soon' }}</h2>
    <p class="password-page__message">{{ section.settings.message }}</p>

    <div class="password-page__form">
      {%- form 'storefront_password', class: 'password-form' -%}
        {%- if form.errors -%}
          <div class="password-page__errors">
            {{ 'general.password_page.password_error' | t }}
          </div>
        {%- endif -%}

        <div class="password-page__input-wrapper">
          <input
            type="password"
            name="password"
            id="Password"
            class="password-page__input"
            placeholder="{{ 'general.password_page.password_placeholder' | t }}"
            autocomplete="current-password"
            required
          >
          <button type="submit" class="password-page__submit">
            {{ 'general.password_page.enter' | t }}
          </button>
        </div>
      {%- endform -%}

      <p style="font-size: 0.75rem; color: var(--color-text-subdued); margin-top: 12px;">
        {{ 'general.password_page.admin_link_html' | t }}
      </p>
    </div>

    {%- if section.settings.show_newsletter -%}
      <div class="password-page__newsletter">
        <h3 class="password-page__newsletter-title">{{ section.settings.newsletter_title }}</h3>
        <p class="password-page__newsletter-text">{{ section.settings.newsletter_text }}</p>

        {%- form 'customer', id: 'newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="password-page__input-wrapper">
            <input
              type="email"
              name="contact[email]"
              id="NewsletterEmail"
              class="password-page__input"
              placeholder="{{ 'general.password_page.newsletter_email_placeholder' | t }}"
              autocomplete="email"
              required
            >
            <button type="submit" class="password-page__submit">
              {{ 'general.password_page.subscribe' | t }}
            </button>
          </div>
        {%- endform -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_social -%}
      <div class="password-page__social">
        {%- if section.settings.social_instagram -%}
          <a href="{{ section.settings.social_instagram }}" target="_blank" rel="noopener" class="password-page__social-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
        {%- endif -%}
        {%- if section.settings.social_facebook -%}
          <a href="{{ section.settings.social_facebook }}" target="_blank" rel="noopener" class="password-page__social-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
        {%- endif -%}
        {%- if section.settings.social_twitter -%}
          <a href="{{ section.settings.social_twitter }}" target="_blank" rel="noopener" class="password-page__social-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
            </svg>
          </a>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Password Page",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "FOLTZ FANWEAR"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Coming Soon"
    },
    {
      "type": "textarea",
      "id": "message",
      "label": "Message",
      "default": "We're working hard to bring you the best soccer jerseys. Enter the password to preview the store."
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Get notified when we launch"
    },
    {
      "type": "textarea",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Be the first to know when we go live and get exclusive launch offers."
    },
    {
      "type": "header",
      "content": "Social Media"
    },
    {
      "type": "checkbox",
      "id": "show_social",
      "label": "Show social media links",
      "default": true
    },
    {
      "type": "url",
      "id": "social_instagram",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "social_facebook",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "social_twitter",
      "label": "Twitter URL"
    }
  ]
}
{% endschema %}
