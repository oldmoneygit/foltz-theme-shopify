.careers-page__form-wrapper {
  max-width: 48rem;
  margin: 0 auto;
  padding: 2rem 0;
}

@media (min-width: 768px) {
  .careers-page__form-wrapper {
    padding: 3rem 0;
  }
}

.careers-page__form-box {
  background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 1rem;
  padding: 2rem;
  backdrop-filter: blur(20px);
}

@media (min-width: 640px) {
  .careers-page__form-box {
    padding: 3rem;
  }
}

.careers-page__form-header {
  text-align: center;
  margin-bottom: 2rem;
}

.careers-page__form-title {
  font-size: 1.75rem;
  font-weight: 900;
  text-transform: uppercase;
  letter-spacing: 0.02em;
  margin: 0 0 1rem 0;
}

@media (min-width: 768px) {
  .careers-page__form-title {
    font-size: 2rem;
  }
}

@media (min-width: 1024px) {
  .careers-page__form-title {
    font-size: 2.5rem;
