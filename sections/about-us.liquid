{% comment %}
  Section: About Us (Sobre Nosotros)
  Página institucional completa
{% endcomment %}

<style>
  .about-us {
    background: #000;
    min-height: 100vh;
  }

  .about-us__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  /* Hero Section */
  .about-us__hero {
    padding: 3rem 0 2rem;
    text-align: center;
  }

  .about-us__title {
    font-size: 2.5rem;
    font-weight: 900;
    color: #fff;
    margin-bottom: 1.5rem;
    line-height: 1.2;
  }

  .about-us__title--highlight {
    color: #D4FF00;
  }

  .about-us__hero-text {
    font-size: 1.25rem;
    color: rgba(255, 255, 255, 0.8);
    max-width: 56rem;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .about-us__hero {
      padding: 4rem 0 3rem;
    }

    .about-us__title {
      font-size: 3.75rem;
    }

    .about-us__hero-text {
      font-size: 1.5rem;
    }
  }

  @media (min-width: 1024px) {
    .about-us__title {
      font-size: 4.5rem;
    }
  }

  /* Mission Section */
  .about-us__mission {
    padding: 3rem 0;
  }

  .about-us__mission-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: center;
    max-width: 80rem;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .about-us__mission-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .about-us__mission-main {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
  }

  .about-us__icon {
    width: 3rem;
    height: 3rem;
    margin-bottom: 1rem;
  }

  .about-us__icon--yellow {
    color: #D4FF00;
  }

  .about-us__section-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 1rem;
  }

  .about-us__section-text {
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.75;
    margin-bottom: 1rem;
  }

  .about-us__section-text:last-child {
    margin-bottom: 0;
  }

  .about-us__benefits {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .about-us__benefit {
    background: linear-gradient(to right, rgba(212, 255, 0, 0.1), rgba(212, 255, 0, 0.05));
    border: 2px solid rgba(212, 255, 0, 0.3);
    border-radius: 0.75rem;
    padding: 1.5rem;
  }

  .about-us__benefit-icon {
    width: 2.5rem;
    height: 2.5rem;
    color: #D4FF00;
    margin-bottom: 0.75rem;
  }

  .about-us__benefit-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.5rem;
  }

  .about-us__benefit-text {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
  }

  /* Values Section */
  .about-us__values {
    padding: 3rem 0;
  }

  .about-us__values-title {
    font-size: 1.875rem;
    font-weight: 900;
    color: #fff;
    text-align: center;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .about-us__values-title {
      font-size: 2.5rem;
    }
  }

  .about-us__values-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 80rem;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .about-us__values-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .about-us__value-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border-radius: 0.75rem;
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .about-us__value-card:hover {
    border-color: rgba(212, 255, 0, 0.3);
  }

  .about-us__value-icon {
    width: 4rem;
    height: 4rem;
    background: #D4FF00;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    font-size: 2rem;
  }

  .about-us__value-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #fff;
    margin-bottom: 0.75rem;
  }

  .about-us__value-text {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.875rem;
  }

  /* Stats Section */
  .about-us__stats {
    padding: 3rem 0;
  }

  .about-us__stats-container {
    max-width: 80rem;
    margin: 0 auto;
    background: linear-gradient(to right, rgba(212, 255, 0, 0.1), rgba(212, 255, 0, 0.05));
    border: 2px solid rgba(212, 255, 0, 0.3);
    border-radius: 0.75rem;
    padding: 2rem;
  }

  @media (min-width: 768px) {
    .about-us__stats-container {
      padding: 3rem;
    }
  }

  .about-us__stats-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .about-us__stats-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .about-us__stat-number {
    font-size: 2.5rem;
    font-weight: 900;
    color: #D4FF00;
    margin-bottom: 0.5rem;
  }

  @media (min-width: 768px) {
    .about-us__stat-number {
      font-size: 3rem;
    }
  }

  .about-us__stat-label {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
  }

  /* CTA Section */
  .about-us__cta {
    padding: 3rem 0 5rem;
    text-align: center;
  }

  .about-us__cta-title {
    font-size: 1.875rem;
    font-weight: 900;
    color: #fff;
    margin-bottom: 1.5rem;
  }

  @media (min-width: 768px) {
    .about-us__cta-title {
      font-size: 2.5rem;
    }
  }

  .about-us__cta-text {
    color: rgba(255, 255, 255, 0.8);
    font-size: 1.125rem;
    margin-bottom: 2rem;
  }

  .about-us__cta-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    background: #D4FF00;
    color: #000;
    padding: 1rem 2rem;
    border-radius: 0.5rem;
    font-weight: 700;
    font-size: 1.125rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(212, 255, 0, 0.2);
  }

  .about-us__cta-button:hover {
    background: #e5ff33;
    transform: scale(1.05);
  }
</style>

<div class="about-us">
  <div class="about-us__container">
    {%- comment %} Hero Section {%- endcomment -%}
    <div class="about-us__hero">
