    {%- comment %} Mission Section {%- endcomment -%}
    <div class="about-us__mission">
      <div class="about-us__mission-grid">
        <div class="about-us__mission-main">
          <svg class="about-us__icon about-us__icon--yellow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
