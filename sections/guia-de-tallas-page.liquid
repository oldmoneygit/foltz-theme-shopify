.size-guide-cta__button:hover {
  background: linear-gradient(135deg, #FAFF00 0%, #DAF10D 100%);
  transform: translateY(-2px);
  box-shadow: 0 6px 24px rgba(218, 241, 13, 0.6);
}

.size-guide-cta__icon {
  width: 20px;
  height: 20px;
