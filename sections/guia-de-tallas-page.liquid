              <tr class="guia-talles-page__table-row">
                <td class="guia-talles-page__table-cell guia-talles-page__table-cell--primary">L</td>
                <td class="guia-talles-page__table-cell">104-112</td>
                <td class="guia-talles-page__table-cell">55</td>
                <td class="guia-talles-page__table-cell">72</td>
              </tr>
              <tr class="guia-talles-page__table-row">
                <td class="guia-talles-page__table-cell guia-talles-page__table-cell--primary">XL</td>
                <td class="guia-talles-page__table-cell">112-120</td>
                <td class="guia-talles-page__table-cell">58</td>
                <td class="guia-talles-page__table-cell">74</td>
