<style>
/* ============================================
   MODERN SIZE GUIDE - MOBILE FIRST
   ============================================ */

/* Base Section */
.size-guide-page {
  min-height: 100vh;
  background: #000000;
  padding: 24px 0 48px;
}

.size-guide-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 16px;
}

/* ============================================
   HEADER
   ============================================ */
.size-guide-header {
  margin-bottom: 32px;
  text-align: center;
}

.size-guide-header__content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  margin-bottom: 12px;
}

.size-guide-header__icon-wrapper {
  flex-shrink: 0;
}

.size-guide-header__icon {
  width: 32px;
  height: 32px;
  color: #DAF10D;
  stroke-width: 2.5;
}

.size-guide-header__title {
  font-size: 28px;
  font-weight: 900;
  color: #FFFFFF;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin: 0;
  line-height: 1.1;
}

.size-guide-header__subtitle {
  font-size: 16px;
  color: rgba(255, 255, 255, 0.6);
  margin: 0;
  line-height: 1.5;
}

/* ============================================
   SIZE TABLE
   ============================================ */
.size-guide-table-section {
  margin-bottom: 32px;
}

.size-guide-table-wrapper {
  background: linear-gradient(135deg, rgba(218, 241, 13, 0.08) 0%, rgba(255, 255, 255, 0.02) 100%);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  overflow: hidden;
  border: 1px solid rgba(218, 241, 13, 0.2);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
}

.size-guide-table-scroll {
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
}

.size-guide-table {
  width: 100%;
  border-collapse: collapse;
}

.size-guide-table__header-row {
  background: linear-gradient(90deg, rgba(218, 241, 13, 0.15) 0%, rgba(218, 241, 13, 0.08) 100%);
  border-bottom: 2px solid rgba(218, 241, 13, 0.3);
}

.size-guide-table__header {
  padding: 16px 12px;
  text-align: left;
  color: #DAF10D;
  font-weight: 900;
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  white-space: nowrap;
}

.size-guide-table__row {
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  transition: all 0.2s ease;
}

.size-guide-table__row:last-child {
  border-bottom: none;
}

.size-guide-table__row:hover {
  background: rgba(218, 241, 13, 0.05);
  transform: scale(1.01);
}

.size-guide-table__cell {
  padding: 14px 12px;
  color: rgba(255, 255, 255, 0.8);
  font-size: 14px;
  white-space: nowrap;
}

.size-guide-table__cell--size {
  color: #DAF10D;
  font-weight: 900;
  font-size: 18px;
}

/* ============================================
   INFO GRID
   ============================================ */
.size-guide-info-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 24px;
  margin-bottom: 32px;
}

.size-guide-card {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.05) 0%, rgba(255, 255, 255, 0.01) 100%);
  backdrop-filter: blur(10px);
  border-radius: 16px;
  padding: 24px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
}

.size-guide-card__header {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 24px;
}

.size-guide-card__icon {
  width: 24px;
  height: 24px;
  color: #DAF10D;
  flex-shrink: 0;
  stroke-width: 2.5;
}

.size-guide-card__title {
  font-size: 20px;
  font-weight: 700;
  color: #FFFFFF;
  margin: 0;
  line-height: 1.2;
}

/* ============================================
   STEPS LIST
   ============================================ */
.size-guide-steps {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.size-guide-step {
  display: flex;
  gap: 12px;
  align-items: flex-start;
}

.size-guide-step__number {
  flex-shrink: 0;
  width: 28px;
  height: 28px;
  border-radius: 50%;
  background: linear-gradient(135deg, #DAF10D 0%, #FAFF00 100%);
  color: #000000;
  font-weight: 900;
  font-size: 14px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4px 12px rgba(218, 241, 13, 0.3);
}

.size-guide-step__content {
  color: rgba(255, 255, 255, 0.85);
  font-size: 14px;
  line-height: 1.6;
  padding-top: 4px;
}

.size-guide-step__content strong {
  color: #FFFFFF;
  font-weight: 700;
}

/* ============================================
   TIPS LIST
   ============================================ */
.size-guide-tips {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.size-guide-tip {
  display: flex;
  gap: 12px;
  align-items: flex-start;
}

.size-guide-tip__check {
  width: 20px;
  height: 20px;
  color: #DAF10D;
  flex-shrink: 0;
  margin-top: 2px;
  stroke-width: 2.5;
}

.size-guide-tip__text {
  color: rgba(255, 255, 255, 0.85);
  font-size: 14px;
  line-height: 1.6;
}

/* ============================================
   CTA SECTION
   ============================================ */
.size-guide-cta {
  background: linear-gradient(135deg, rgba(218, 241, 13, 0.12) 0%, rgba(234, 255, 0, 0.08) 100%);
  border: 2px solid rgba(218, 241, 13, 0.3);
  border-radius: 16px;
  padding: 32px 24px;
  text-align: center;
}

.size-guide-cta__content {
  max-width: 600px;
  margin: 0 auto;
}

.size-guide-cta__title {
  font-size: 24px;
  font-weight: 900;
  color: #FFFFFF;
  margin: 0 0 12px 0;
  text-transform: uppercase;
  letter-spacing: 0.02em;
}

.size-guide-cta__text {
  color: rgba(255, 255, 255, 0.8);
  margin: 0 0 24px 0;
  line-height: 1.6;
  font-size: 15px;
}

.size-guide-cta__button {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  background: linear-gradient(135deg, #DAF10D 0%, #FAFF00 100%);
  color: #000000;
  font-weight: 900;
  font-size: 16px;
  padding: 14px 32px;
  border-radius: 12px;
  text-decoration: none;
  transition: all 0.3s ease;
  box-shadow: 0 4px 16px rgba(218, 241, 13, 0.4);
  text-transform: uppercase;
  letter-spacing: 0.02em;
