/* ============================================
   DESKTOP RESPONSIVE (1024px+)
   ============================================ */
@media (min-width: 1024px) {
  .size-guide-header__icon {
    width: 48px;
    height: 48px;
  }

  .size-guide-header__title {
    font-size: 56px;
  }

