              <tr class="guia-talles-page__table-row">
                <td class="guia-talles-page__table-cell guia-talles-page__table-cell--primary">M</td>
                <td class="guia-talles-page__table-cell">96-104</td>
                <td class="guia-talles-page__table-cell">52</td>
                <td class="guia-talles-page__table-cell">70</td>
