<style>
.politica-cambios-page-section {
  background: #000;
  min-height: 100vh;
  padding: 2rem 0 4rem;
  color: #fff;
  position: relative;
  overflow: hidden;
}

.politica-cambios-page-section::before {
  content: '';
  position: absolute;
  top: -200px;
  left: 50%;
  transform: translateX(-50%);
  width: 1000px;
  height: 1000px;
  background: radial-gradient(circle, rgba(218, 241, 13, 0.08) 0%, transparent 70%);
  pointer-events: none;
  z-index: 0;
}

.politica-cambios-page__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
  position: relative;
  z-index: 1;
}

/* Header */
.politica-cambios-page__header {
  padding: 2rem 0 3rem;
  text-align: center;
  max-width: 900px;
  margin: 0 auto;
}

.politica-cambios-page__header-icon-wrapper {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  margin: 0 auto 2rem;
  background: linear-gradient(135deg, rgba(218, 241, 13, 0.2), rgba(218, 241, 13, 0.05));
  border: 2px solid rgba(218, 241, 13, 0.3);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    box-shadow: 0 0 0 0 rgba(218, 241, 13, 0.4);
  }
  50% {
    transform: scale(1.05);
    box-shadow: 0 0 20px 10px rgba(218, 241, 13, 0);
  }
}

.politica-cambios-page__header-icon {
  color: #DAF10D;
}

.politica-cambios-page__title {
  font-size: 2rem;
  font-weight: 900;
  text-transform: uppercase;
  margin: 0 0 1rem 0;
  line-height: 1.1;
  letter-spacing: 0.02em;
}

@media (min-width: 768px) {
  .politica-cambios-page__title {
    font-size: 2.5rem;
  }
}

.politica-cambios-page__title-highlight {
  color: #DAF10D;
}

.politica-cambios-page__subtitle {
  font-size: 1rem;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
  margin: 0;
}

@media (min-width: 768px) {
  .politica-cambios-page__subtitle {
    font-size: 1.125rem;
  }
}

/* 30 Days Banner */
.politica-cambios-page__banner {
  background: linear-gradient(135deg, rgba(218, 241, 13, 0.15), rgba(218, 241, 13, 0.05));
  border: 2px solid rgba(218, 241, 13, 0.3);
  border-radius: 1.5rem;
  padding: 2rem;
  margin-bottom: 3rem;
  backdrop-filter: blur(20px);
  transition: all 0.3s ease;
}

.politica-cambios-page__banner:hover {
  border-color: rgba(218, 241, 13, 0.5);
  box-shadow: 0 20px 40px rgba(218, 241, 13, 0.2);
  transform: translateY(-2px);
}

.politica-cambios-page__banner-content {
  display: flex;
  align-items: flex-start;
  gap: 1.5rem;
