{%- comment -%}
  FOOTER SECTION
  Replicates: src/components/Footer.jsx from Next.js project
{%- endcomment -%}

<footer class="footer">
  <div class="container">
    <!-- Main Footer Grid -->
    <div class="footer-links">
      <!-- Column 1: Logo & Social Media -->
      <div class="footer-column">
        {%- if section.settings.logo -%}
          <img src="{{ section.settings.logo | img_url: '160x48' }}" alt="{{ shop.name }}" class="footer-logo">
        {%- else -%}
          <img src="{{ 'logo-white.png' | asset_url }}" alt="{{ shop.name }}" class="footer-logo">
        {%- endif -%}

        <p class="footer-tagline">{{ section.settings.tagline }}</p>

        <!-- Social Media Icons -->
        <div class="footer-social">
          {%- if section.settings.instagram_url != blank -%}
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="footer-social-icon" aria-label="Instagram">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          {%- endif -%}
          {%- if section.settings.facebook_url != blank -%}
            <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer" class="footer-social-icon" aria-label="Facebook">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
              </svg>
            </a>
          {%- endif -%}
          {%- if section.settings.twitter_url != blank -%}
            <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener noreferrer" class="footer-social-icon" aria-label="Twitter">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      <!-- Dynamic Link Columns -->
      {%- for block in section.blocks -%}
        {%- if block.type == 'link_list' -%}
          <div class="footer-column" {{ block.shopify_attributes }}>
            <h3>{{ block.settings.title }}</h3>
            <ul>
              {%- for link in linklists[block.settings.menu].links -%}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    <!-- Contact Info -->
    <div class="footer-contact">
      {%- if section.settings.email != blank -%}
        <div class="footer-contact-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
        </div>
      {%- endif -%}

      {%- if section.settings.phone != blank -%}
        <div class="footer-contact-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          <a href="tel:{{ section.settings.phone | remove: ' ' | remove: '-' }}">{{ section.settings.phone }}</a>
        </div>
      {%- endif -%}

      {%- if section.settings.address != blank -%}
        <div class="footer-contact-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <span>{{ section.settings.address }}</span>
        </div>
      {%- endif -%}
    </div>

    <!-- Payment Methods -->
    <div class="footer-payments">
      <p class="footer-payments-title">{{ section.settings.payment_title }}</p>
      <div class="footer-payments-icons">
        <div class="payment-icon">
          <img src="{{ 'visa.png' | asset_url }}" alt="Visa" loading="lazy">
        </div>
        <div class="payment-icon">
          <img src="{{ 'mastercard.png' | asset_url }}" alt="Mastercard" loading="lazy">
        </div>
        <div class="payment-icon">
          <img src="{{ 'amex.png' | asset_url }}" alt="American Express" loading="lazy">
        </div>
        <div class="payment-icon">
          <img src="{{ 'diners.png' | asset_url }}" alt="Diners Club" loading="lazy">
        </div>
        <div class="payment-icon">
          <img src="{{ 'discover.png' | asset_url }}" alt="Discover" loading="lazy">
        </div>
        <div class="payment-icon">
          <img src="{{ 'elo.png' | asset_url }}" alt="Elo" loading="lazy">
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="container">
      <p>© {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }} | {{ section.settings.made_with }}</p>
    </div>
  </div>
</footer>

<style>
/* Footer Logo */
.footer-logo {
  max-width: 160px;
  height: auto;
  object-fit: contain;
  display: block;
  margin-bottom: var(--spacing-4);
}

/* Footer Tagline */
.footer-tagline {
  color: var(--color-white-60);
  font-size: var(--font-size-sm);
  margin-bottom: var(--spacing-6);
}

/* Footer Contact Section */
.footer-contact {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--spacing-6);
  padding: var(--spacing-12) 0;
  border-top: 1px solid var(--color-yellow-20);
  margin-top: var(--spacing-12);
}

@media (min-width: 768px) {
  .footer-contact {
    grid-template-columns: repeat(3, 1fr);
  }
}

.footer-contact-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  color: var(--color-white-70);
  font-size: var(--font-size-sm);
}

.footer-contact-item svg {
  color: var(--color-brand-yellow);
  flex-shrink: 0;
}

.footer-contact-item a {
  color: inherit;
  transition: color var(--transition-base);
}

.footer-contact-item a:hover {
  color: var(--color-brand-yellow);
}

/* Footer Social Media */
.footer-social {
  display: flex;
  gap: var(--spacing-4);
  margin-top: var(--spacing-4);
}

.footer-social-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: var(--color-brand-yellow);
  color: var(--color-brand-black);
  border-radius: var(--radius-full);
  transition: all var(--transition-base);
}

.footer-social-icon:hover {
  background: var(--color-brand-white);
  transform: scale(1.1);
}

/* Footer Payments */
.footer-payments {
  padding: var(--spacing-8) 0;
  border-top: 1px solid var(--color-yellow-20);
  margin-top: var(--spacing-12);
  text-align: center;
}

.footer-payments-title {
  font-size: var(--font-size-sm);
  color: var(--color-white-60);
  margin-bottom: var(--spacing-6);
  font-weight: 500;
}

.footer-payments-icons {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.payment-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.05);
  padding: 8px 12px;
  border-radius: 8px;
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.payment-icon:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
  border-color: rgba(218, 241, 13, 0.3);
}

.payment-icon img {
  height: 24px;
  width: auto;
  display: block;
  object-fit: contain;
}

@media (min-width: 640px) {
  .payment-icon {
    padding: 10px 14px;
  }

  .payment-icon img {
    height: 28px;
  }
}

@media (min-width: 768px) {
  .footer-payments-icons {
    gap: 16px;
  }

  .payment-icon {
    padding: 12px 16px;
  }

  .payment-icon img {
    height: 32px;
  }
}
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Réplicas premium 1:1. Calidad idéntica a las grandes marcas. Envío a toda Argentina."
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "contacto@foltzfanwear.com"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "+54 9 11 1234-5678"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "Buenos Aires, Argentina"
    },
    {
      "type": "text",
      "id": "payment_title",
      "label": "Payment Methods Title",
      "default": "Métodos de pago aceptados"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Todos los derechos reservados."
    },
    {
      "type": "text",
      "id": "made_with",
      "label": "Made With Text",
      "default": "Hecho con ⚽ en Argentina"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Title",
          "default": "Links",
          "info": "Use apenas 2 colunas: 'Empresa' e 'Ayuda'"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "max_blocks": 2
}
{% endschema %}
