{%- comment -%}
  FOOTER SECTION
  Replicates: src/components/Footer.jsx from Next.js project
{%- endcomment -%}

<footer class="footer">
  <div class="container">
    <!-- Main Footer Grid -->
    <div class="footer-links">
      <!-- Column 1: Logo & Social Media -->
      <div class="footer-column">
        {%- if section.settings.logo -%}
          <img src="{{ section.settings.logo | img_url: '160x48' }}" alt="{{ shop.name }}" class="footer-logo">
        {%- else -%}
          <img src="{{ 'logo-white.png' | asset_url }}" alt="{{ shop.name }}" class="footer-logo">
        {%- endif -%}

        <p class="footer-tagline">{{ section.settings.tagline }}</p>

        <!-- Social Media Icons -->
        <div class="footer-social">
          {%- if section.settings.instagram_url != blank -%}
            <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="footer-social-icon" aria-label="Instagram">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          {%- endif -%}
          {%- if section.settings.facebook_url != blank -%}
            <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer" class="footer-social-icon" aria-label="Facebook">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
              </svg>
            </a>
          {%- endif -%}
          {%- if section.settings.twitter_url != blank -%}
            <a href="{{ section.settings.twitter_url }}" target="_blank" rel="noopener noreferrer" class="footer-social-icon" aria-label="Twitter">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
              </svg>
            </a>
          {%- endif -%}
        </div>
      </div>

      <!-- Dynamic Link Columns -->
      {%- for block in section.blocks -%}
        {%- if block.type == 'link_list' -%}
          <div class="footer-column" {{ block.shopify_attributes }}>
            <h3>{{ block.settings.title }}</h3>
            <ul>
              {%- for link in linklists[block.settings.menu].links -%}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    <!-- Contact Info -->
    <div class="footer-contact">
      {%- if section.settings.email != blank -%}
        <div class="footer-contact-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
        </div>
      {%- endif -%}

      {%- if section.settings.phone != blank -%}
        <div class="footer-contact-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          <a href="tel:{{ section.settings.phone | remove: ' ' | remove: '-' }}">{{ section.settings.phone }}</a>
        </div>
      {%- endif -%}

      {%- if section.settings.address != blank -%}
        <div class="footer-contact-item">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
            <circle cx="12" cy="10" r="3"></circle>
          </svg>
          <span>{{ section.settings.address }}</span>
        </div>
      {%- endif -%}
    </div>

    <!-- Payment Methods -->
    <div class="footer-payments">
      <p class="footer-payments-title">{{ section.settings.payment_title }}</p>
      <div class="footer-payments-icons">
        <!-- Visa -->
        <div class="payment-icon">
          <svg viewBox="0 0 48 32" xmlns="http://www.w3.org/2000/svg">
            <rect width="48" height="32" rx="4" fill="#fff"/>
            <path d="M19.8 10.4l-3.6 11.2h-2.4l-1.8-6.9c-.1-.4-.2-.5-.5-.7-.5-.3-1.4-.6-2.1-.8l.1-.3h3.6c.5 0 .9.3 1 .8l.9 4.9 2.3-5.7h2.5zm9.8 7.5c0-2.9-4-3.1-4-4.4 0-.4.4-.8 1.2-.9.4 0 1.5-.1 2.7.5l.5-2.3c-.7-.2-1.5-.5-2.6-.5-2.7 0-4.6 1.4-4.6 3.5 0 1.5 1.4 2.4 2.4 2.9 1 .5 1.4.8 1.4 1.3 0 .7-.9 1-1.7 1-1.4 0-2.2-.4-2.8-.7l-.5 2.3c.6.3 1.8.5 3 .5 2.9 0 4.8-1.4 4.8-3.6zm7 3.7h2.2l-1.9-11.2h-2c-.5 0-.9.3-1 .7l-3.6 10.5h2.7l.5-1.5h3.3l.3 1.5zm-2.9-3.5l1.4-3.8.8 3.8h-2.2zm-8.5-7.7l-2.1 11.2h-2.5l2.1-11.2h2.5z" fill="#1434CB"/>
          </svg>
        </div>

        <!-- Mastercard -->
        <div class="payment-icon">
          <svg viewBox="0 0 48 32" xmlns="http://www.w3.org/2000/svg">
            <rect width="48" height="32" rx="4" fill="#fff"/>
            <circle cx="18" cy="16" r="8" fill="#EB001B"/>
            <circle cx="30" cy="16" r="8" fill="#F79E1B"/>
            <path d="M24 9.6c-1.7 1.4-2.8 3.6-2.8 6s1.1 4.6 2.8 6c1.7-1.4 2.8-3.6 2.8-6s-1.1-4.6-2.8-6z" fill="#FF5F00"/>
          </svg>
        </div>

        <!-- American Express -->
        <div class="payment-icon">
          <svg viewBox="0 0 48 32" xmlns="http://www.w3.org/2000/svg">
            <rect width="48" height="32" rx="4" fill="#006FCF"/>
            <path d="M9 12.5h2.5l.7 1.6.7-1.6h2.5v5.5h-1.6v-3.4l-.8 1.9h-1.2l-.8-1.9v3.4H9v-5.5zm8.5 0h4v1.3h-2.4v.7h2.3v1.2h-2.3v.8h2.4v1.3h-4v-5.3zm5 0h1.7l1.1 1.8 1.1-1.8h1.7v5.5h-1.6v-3l-1.2 1.9h-.1l-1.2-1.9v3h-1.5v-5.5zm8 1.3v-.2h-1.6v-.3c0-.4.2-.7.7-.7h2.4v-1.6h-2.7c-1.3 0-2.2.8-2.2 2.1v1.6c0 1.3.9 2.1 2.2 2.1h2.7v-1.6h-2.4c-.5 0-.7-.3-.7-.7v-.4h2.2l-.6-1.3z" fill="#fff"/>
          </svg>
        </div>

        <!-- Diners Club -->
        <div class="payment-icon">
          <svg viewBox="0 0 48 32" xmlns="http://www.w3.org/2000/svg">
            <rect width="48" height="32" rx="4" fill="#fff"/>
            <path d="M24 8c-4.4 0-8 3.6-8 8s3.6 8 8 8 8-3.6 8-8-3.6-8-8-8z" fill="#0079BE"/>
            <path d="M20.5 11.5c-2.5 1.2-4.2 3.8-4.2 6.8 0 3 1.7 5.6 4.2 6.8v-13.6zm7 0v13.6c2.5-1.2 4.2-3.8 4.2-6.8 0-3-1.7-5.6-4.2-6.8z" fill="#fff"/>
          </svg>
        </div>

        <!-- Discover -->
        <div class="payment-icon">
          <svg viewBox="0 0 48 32" xmlns="http://www.w3.org/2000/svg">
            <rect width="48" height="32" rx="4" fill="#fff"/>
            <path d="M32 16c0 4.4-3.6 8-8 8H0V8h24c4.4 0 8 3.6 8 8z" fill="#FF6000"/>
            <circle cx="40" cy="16" r="6" fill="#FF6000"/>
            <path d="M8 12h1.5c1.1 0 1.9.8 1.9 2s-.8 2-1.9 2H8v-4zm1.5 3.2c.7 0 1.2-.5 1.2-1.2s-.5-1.2-1.2-1.2H8.8v2.4h.7zm2.5-3.2h.8v4h-.8v-4zm2.8 2.4c-.4-.1-.6-.3-.6-.6 0-.4.4-.8 1-.8.4 0 .7.1.9.3l.3-.6c-.3-.2-.7-.4-1.2-.4-.9 0-1.7.6-1.7 1.4 0 .7.5 1.1 1.2 1.3.5.1.8.3.8.7 0 .4-.4.7-.9.7-.5 0-.9-.2-1.2-.5l-.4.6c.4.4.9.6 1.6.6 1 0 1.7-.6 1.7-1.5 0-.8-.6-1.1-1.5-1.3zm4.9-.7c-.6-.5-1.4-.8-2.3-.8h-1.2v4h1.2c.9 0 1.7-.3 2.3-.8.5-.5.8-1.1.8-1.8s-.3-1.3-.8-1.6zm-.2 2.9c-.4.4-.9.6-1.5.6h-.4v-2.7h.4c.6 0 1.1.2 1.5.6.3.3.5.7.5 1.1s-.2.8-.5 1.1z" fill="#000"/>
          </svg>
        </div>

        <!-- Elo (Brazilian) -->
        <div class="payment-icon">
          <svg viewBox="0 0 48 32" xmlns="http://www.w3.org/2000/svg">
            <rect width="48" height="32" rx="4" fill="#fff"/>
            <path d="M15 12l-3 8h2l.6-1.7h2.8l.6 1.7h2l-3-8h-2zm-.2 5.2l1-2.8 1 2.8h-2z" fill="#FFCB05"/>
            <path d="M21 12v8h5v-1.7h-3v-1.5h2.8v-1.7H23v-1.4h3V12h-5z" fill="#00A4E0"/>
            <path d="M27 12v8h2v-6.3l3 6.3h2v-8h-2v6.3l-3-6.3h-2z" fill="#EE4023"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="container">
      <p>© {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }} | {{ section.settings.made_with }}</p>
    </div>
  </div>
</footer>

<style>
/* Footer Logo */
.footer-logo {
  max-width: 160px;
  height: auto;
  object-fit: contain;
  display: block;
  margin-bottom: var(--spacing-4);
}

/* Footer Tagline */
.footer-tagline {
  color: var(--color-white-60);
  font-size: var(--font-size-sm);
  margin-bottom: var(--spacing-6);
}

/* Footer Contact Section */
.footer-contact {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--spacing-6);
  padding: var(--spacing-12) 0;
  border-top: 1px solid var(--color-yellow-20);
  margin-top: var(--spacing-12);
}

@media (min-width: 768px) {
  .footer-contact {
    grid-template-columns: repeat(3, 1fr);
  }
}

.footer-contact-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-3);
  color: var(--color-white-70);
  font-size: var(--font-size-sm);
}

.footer-contact-item svg {
  color: var(--color-brand-yellow);
  flex-shrink: 0;
}

.footer-contact-item a {
  color: inherit;
  transition: color var(--transition-base);
}

.footer-contact-item a:hover {
  color: var(--color-brand-yellow);
}

/* Footer Social Media */
.footer-social {
  display: flex;
  gap: var(--spacing-4);
  margin-top: var(--spacing-4);
}

.footer-social-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  background: var(--color-brand-yellow);
  color: var(--color-brand-black);
  border-radius: var(--radius-full);
  transition: all var(--transition-base);
}

.footer-social-icon:hover {
  background: var(--color-brand-white);
  transform: scale(1.1);
}

/* Footer Payments */
.footer-payments {
  padding: var(--spacing-8) 0;
  border-top: 1px solid var(--color-yellow-20);
  margin-top: var(--spacing-12);
  text-align: center;
}

.footer-payments-title {
  font-size: var(--font-size-sm);
  color: var(--color-white-60);
  margin-bottom: var(--spacing-6);
  font-weight: 500;
}

.footer-payments-icons {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 12px;
  flex-wrap: wrap;
}

.payment-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.05);
  padding: 8px 12px;
  border-radius: 8px;
  transition: all 0.3s ease;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.payment-icon:hover {
  background: rgba(255, 255, 255, 0.1);
  transform: translateY(-2px);
  border-color: rgba(218, 241, 13, 0.3);
}

.payment-icon svg {
  height: 24px;
  width: auto;
  display: block;
}

@media (min-width: 640px) {
  .payment-icon {
    padding: 10px 14px;
  }

  .payment-icon svg {
    height: 28px;
  }
}

@media (min-width: 768px) {
  .footer-payments-icons {
    gap: 16px;
  }

  .payment-icon {
    padding: 12px 16px;
  }

  .payment-icon svg {
    height: 32px;
  }
}
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Réplicas premium 1:1. Calidad idéntica a las grandes marcas. Envío a toda Argentina."
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "contacto@foltzfanwear.com"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone",
      "default": "+54 9 11 1234-5678"
    },
    {
      "type": "text",
      "id": "address",
      "label": "Address",
      "default": "Buenos Aires, Argentina"
    },
    {
      "type": "text",
      "id": "payment_title",
      "label": "Payment Methods Title",
      "default": "Métodos de pago aceptados"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Todos los derechos reservados."
    },
    {
      "type": "text",
      "id": "made_with",
      "label": "Made With Text",
      "default": "Hecho con ⚽ en Argentina"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Title",
          "default": "Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ]
}
{% endschema %}
