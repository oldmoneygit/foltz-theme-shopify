              <label for="contact-name" class="contact-form__label">
                Nombre *
              </label>
              <input
                type="text"
                id="contact-name"
                name="contact[name]"
                class="contact-form__input"
                required
                placeholder="Tu nombre"
              >
            </div>

            <div class="contact-form__group">
              <label for="contact-email" class="contact-form__label">
                Email *
              </label>
              <input
                type="email"
                id="contact-email"
                name="contact[email]"
                class="contact-form__input"
                required
                placeholder="tu@email.com"
              >
            </div>

            <div class="contact-form__group">
              <label for="contact-phone" class="contact-form__label">
                Teléfono
              </label>
              <input
                type="tel"
                id="contact-phone"
                name="contact[phone]"
                class="contact-form__input"
                placeholder="+54 9 11 1234-5678"
              >
            </div>

            <div class="contact-form__group">
              <label for="contact-message" class="contact-form__label">
                Mensaje *
              </label>
              <textarea
                id="contact-message"
                name="contact[body]"
                class="contact-form__textarea"
                required
                placeholder="Escribí tu mensaje aquí..."
              ></textarea>
            </div>

            <button type="submit" class="contact-form__button">
              Enviar mensaje
            </button>
