{% comment %}
  Contacto Section
  Contact page with form and contact info
{% endcomment %}

{%- liquid
  assign show_section = section.settings.show_section | default: true
-%}

{%- if show_section -%}
<section class="contacto" data-section-id="{{ section.id }}">
  <div class="contacto__container">
    {%- comment %} Header {%- endcomment -%}
    <div class="contacto__header">
      <div class="contacto__header-title-wrapper">
        <svg class="contacto__header-icon" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
        </svg>
        <h1 class="contacto__title">
          {{ section.settings.title | default: "CONTACTANOS" }}
        </h1>
      </div>
      <p class="contacto__subtitle">
        {{ section.settings.subtitle | default: "¡Estamos aquí para ayudarte! Contáctanos." }}
      </p>
    </div>

    <div class="contacto__grid">
      {%- comment %} Contact Info Column {%- endcomment -%}
      <div class="contacto__info-column">
        {%- comment %} WhatsApp Card {%- endcomment -%}
        <a href="{{ section.settings.whatsapp_link | default: 'https://wa.me/5511999999999' }}" target="_blank" rel="noopener noreferrer" class="contacto__card contacto__card--whatsapp">
          <div class="contacto__card-icon-wrapper contacto__card-icon-wrapper--whatsapp">
            <svg class="contacto__card-icon" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
            </svg>
          </div>
          <div class="contacto__card-content">
            <h3 class="contacto__card-title">WhatsApp</h3>
            <p class="contacto__card-desc">La forma más rápida de contactarnos</p>
            <p class="contacto__card-value contacto__card-value--whatsapp">{{ section.settings.whatsapp_number | default: "+55 11 99999-9999" }}</p>
            <p class="contacto__card-hours">Respuesta inmediata • 9:00 - 21:00hs</p>
          </div>
        </a>

        {%- comment %} Email Card {%- endcomment -%}
        <a href="mailto:{{ section.settings.email | default: 'contato@foltz.com.br' }}" class="contacto__card">
          <div class="contacto__card-icon-wrapper">
            <svg class="contacto__card-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <div class="contacto__card-content">
            <h3 class="contacto__card-title">Email</h3>
            <p class="contacto__card-desc">Para consultas detalladas</p>
            <p class="contacto__card-value contacto__card-value--yellow">{{ section.settings.email | default: "contato@foltz.com.br" }}</p>
            <p class="contacto__card-hours">Respuesta en 24-48h</p>
          </div>
        </a>

        {%- comment %} Instagram Card {%- endcomment -%}
        <a href="{{ section.settings.instagram_link | default: 'https://instagram.com/foltz.oficial' }}" target="_blank" rel="noopener noreferrer" class="contacto__card contacto__card--instagram">
          <div class="contacto__card-icon-wrapper contacto__card-icon-wrapper--instagram">
            <svg class="contacto__card-icon" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </div>
          <div class="contacto__card-content">
            <h3 class="contacto__card-title">Instagram</h3>
            <p class="contacto__card-desc">Seguinos para ofertas exclusivas</p>
            <p class="contacto__card-value contacto__card-value--instagram">{{ section.settings.instagram_handle | default: "@foltz.oficial" }}</p>
            <p class="contacto__card-hours">Novedades diarias</p>
          </div>
        </a>

        {%- comment %} Horarios Card {%- endcomment -%}
        <div class="contacto__card">
          <div class="contacto__card-icon-wrapper">
            <svg class="contacto__card-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <div class="contacto__card-content">
            <h3 class="contacto__card-title">Horario de Atención</h3>
            <div class="contacto__schedule">
              <div class="contacto__schedule-row">
                <span class="contacto__schedule-day">Lunes a Viernes</span>
                <span class="contacto__schedule-time">9:00 - 21:00h</span>
              </div>
              <div class="contacto__schedule-row">
                <span class="contacto__schedule-day">Sábados</span>
                <span class="contacto__schedule-time">10:00 - 18:00h</span>
              </div>
              <div class="contacto__schedule-row">
                <span class="contacto__schedule-day">Domingos</span>
                <span class="contacto__schedule-time">10:00 - 14:00h</span>
              </div>
            </div>
          </div>
        </div>

        {%- comment %} Ubicación Card {%- endcomment -%}
        <div class="contacto__card">
          <div class="contacto__card-icon-wrapper">
            <svg class="contacto__card-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <div class="contacto__card-content">
            <h3 class="contacto__card-title">Localização</h3>
            <p class="contacto__card-desc">
              Loja Online<br>
              Enviamos para toda Argentina
            </p>
          </div>
        </div>
      </div>

      {%- comment %} Contact Form Column {%- endcomment -%}
      <div class="contacto__form-column">
        <div class="contacto__form-wrapper">
          <h2 class="contacto__form-title">Enviá un Mensaje</h2>

          <div id="contacto-success-message" class="contacto__success-message" style="display: none;">
            <svg class="contacto__success-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
            <p>¡Mensaje enviado exitosamente! Nos pondremos en contacto pronto.</p>
          </div>

          {% form 'contact', class: 'contacto__form', id: 'contacto-form' %}
            {%- if form.posted_successfully? -%}
              <script>
                document.addEventListener('DOMContentLoaded', function() {
                  document.getElementById('contacto-success-message').style.display = 'flex';
                  setTimeout(function() {
                    document.getElementById('contacto-success-message').style.display = 'none';
                  }, 5000);
                });
              </script>
            {%- endif -%}

            <div class="contacto__form-group">
              <label class="contacto__form-label">Nombre Completo *</label>
              <input
                type="text"
                name="contact[name]"
                class="contacto__form-input"
                placeholder="Tu nombre"
                required
              >
            </div>

            <div class="contacto__form-group">
              <label class="contacto__form-label">Email *</label>
              <input
                type="email"
                name="contact[email]"
                class="contacto__form-input"
                placeholder="tuemail@ejemplo.com"
                required
              >
            </div>

            <div class="contacto__form-group">
              <label class="contacto__form-label">Teléfono</label>
              <input
                type="tel"
                name="contact[phone]"
                class="contacto__form-input"
                placeholder="+54 9 11 1234-5678"
              >
            </div>

            <div class="contacto__form-group">
              <label class="contacto__form-label">Asunto *</label>
              <select name="contact[subject]" class="contacto__form-input" required>
                <option value="">Seleccioná el asunto</option>
                <option value="consulta">Consulta sobre producto</option>
                <option value="pedido">Estado del pedido</option>
                <option value="cambio">Cambio o devolución</option>
                <option value="tallas">Consulta sobre talles</option>
                <option value="mayoreo">Mayorista</option>
                <option value="otro">Otro</option>
              </select>
            </div>

            <div class="contacto__form-group">
              <label class="contacto__form-label">Mensaje *</label>
              <textarea
                name="contact[body]"
                class="contacto__form-textarea"
                placeholder="Escribí tu mensaje aquí..."
                rows="5"
                required
              ></textarea>
            </div>

            <button type="submit" class="contacto__form-button">
              <svg class="contacto__form-button-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="22" y1="2" x2="11" y2="13"></line>
                <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
              </svg>
              Enviar Mensaje
            </button>
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</section>
{%- endif -%}

<style>
/* Contacto Section */
.contacto {
  background: #000;
  min-height: 100vh;
  padding: 1.5rem 0 3rem;
}

@media (min-width: 768px) {
  .contacto {
    padding: 2rem 0 3rem;
  }
}

.contacto__container {
  max-width: 1536px;
  margin: 0 auto;
  padding: 0 1rem;
}

@media (min-width: 768px) {
  .contacto__container {
    padding: 0 1.5rem;
  }
}

/* Header */
.contacto__header {
  margin-bottom: 2rem;
}

@media (min-width: 768px) {
  .contacto__header {
    margin-bottom: 3rem;
  }
}

.contacto__header-title-wrapper {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1rem;
}

.contacto__header-icon {
  width: 2rem;
  height: 2rem;
  color: #D4FF00;
}

@media (min-width: 768px) {
  .contacto__header-icon {
    width: 2.5rem;
    height: 2.5rem;
  }
}

.contacto__title {
  font-size: 1.875rem;
  font-weight: 900;
  color: #fff;
  text-transform: uppercase;
}

@media (min-width: 768px) {
  .contacto__title {
    font-size: 3rem;
  }
}

.contacto__subtitle {
  color: rgba(255, 255, 255, 0.6);
  font-size: 1rem;
}

@media (min-width: 768px) {
  .contacto__subtitle {
    font-size: 1.125rem;
  }
}

/* Grid */
.contacto__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 2rem;
}

@media (min-width: 1024px) {
  .contacto__grid {
    grid-template-columns: 1fr 1fr;
  }
}

/* Info Column */
.contacto__info-column {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

/* Contact Cards */
.contacto__card {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(8px);
  border-radius: 0.75rem;
  padding: 1.5rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
  display: flex;
  gap: 1rem;
  text-decoration: none;
}

.contacto__card:hover {
  border-color: rgba(212, 255, 0, 0.5);
  transform: scale(1.05);
}

.contacto__card--whatsapp {
  background: linear-gradient(135deg, rgba(34, 197, 94, 0.2) 0%, rgba(34, 197, 94, 0) 100%);
  border-color: rgba(34, 197, 94, 0.3);
}

.contacto__card--whatsapp:hover {
  border-color: rgba(34, 197, 94, 0.5);
}

.contacto__card--instagram {
  background: linear-gradient(135deg, rgba(236, 72, 153, 0.2) 0%, rgba(168, 85, 247, 0.2) 100%);
  border-color: rgba(236, 72, 153, 0.3);
}

.contacto__card--instagram:hover {
  border-color: rgba(236, 72, 153, 0.5);
}

.contacto__card-icon-wrapper {
  width: 3rem;
  height: 3rem;
  border-radius: 0.75rem;
  background: rgba(212, 255, 0, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.contacto__card-icon-wrapper--whatsapp {
  background: rgba(34, 197, 94, 0.2);
}

.contacto__card-icon-wrapper--instagram {
  background: linear-gradient(135deg, #ec4899 0%, #a855f7 100%);
}

.contacto__card-icon {
  width: 1.5rem;
  height: 1.5rem;
  color: #D4FF00;
}

.contacto__card-icon-wrapper--whatsapp .contacto__card-icon {
  color: #22c55e;
}

.contacto__card-icon-wrapper--instagram .contacto__card-icon {
  color: #fff;
}

.contacto__card-content {
  flex: 1;
}

.contacto__card-title {
  color: #fff;
  font-weight: 700;
  font-size: 1.125rem;
  margin-bottom: 0.25rem;
}

.contacto__card-desc {
  color: rgba(255, 255, 255, 0.6);
  font-size: 0.875rem;
  margin-bottom: 0.5rem;
}

.contacto__card-value {
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.contacto__card-value--whatsapp {
  color: #4ade80;
}

.contacto__card-value--yellow {
  color: #D4FF00;
}

.contacto__card-value--instagram {
  color: #ec4899;
}

.contacto__card-hours {
  color: rgba(255, 255, 255, 0.4);
  font-size: 0.75rem;
}

/* Schedule */
.contacto__schedule {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  font-size: 0.875rem;
  margin-top: 0.75rem;
}

.contacto__schedule-row {
  display: flex;
  justify-content: space-between;
}

.contacto__schedule-day {
  color: rgba(255, 255, 255, 0.6);
}

.contacto__schedule-time {
  color: #fff;
  font-weight: 700;
}

/* Form Column */
.contacto__form-column {
  position: relative;
}

@media (min-width: 1024px) {
  .contacto__form-wrapper {
    position: sticky;
    top: 2rem;
  }
}

.contacto__form-wrapper {
  background: rgba(255, 255, 255, 0.05);
  backdrop-filter: blur(8px);
  border-radius: 0.75rem;
  padding: 1.5rem;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

@media (min-width: 768px) {
  .contacto__form-wrapper {
    padding: 2rem;
  }
}

.contacto__form-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: #fff;
  margin-bottom: 1.5rem;
}

/* Success Message */
.contacto__success-message {
  margin-bottom: 1.5rem;
  background: rgba(34, 197, 94, 0.1);
  border: 1px solid rgba(34, 197, 94, 0.5);
  border-radius: 0.5rem;
  padding: 1rem;
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
}

.contacto__success-icon {
  flex-shrink: 0;
  margin-top: 0.125rem;
  color: #22c55e;
}

.contacto__success-message p {
  color: #4ade80;
  font-size: 0.875rem;
  margin: 0;
}

/* Form */
.contacto__form {
  display: flex;
  flex-direction: column;
  gap: 1.25rem;
}

.contacto__form-group {
  display: flex;
  flex-direction: column;
}

.contacto__form-label {
  display: block;
  color: #fff;
  font-size: 0.875rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
}

.contacto__form-input,
.contacto__form-textarea {
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 0.5rem;
  padding: 0.75rem 1rem;
  color: #fff;
  font-size: 1rem;
  transition: all 0.3s ease;
}

.contacto__form-input::placeholder,
.contacto__form-textarea::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.contacto__form-input:focus,
.contacto__form-textarea:focus {
  border-color: #D4FF00;
  outline: none;
}

.contacto__form-input option {
  background: #000;
  color: #fff;
}

.contacto__form-textarea {
  resize: none;
}

.contacto__form-button {
  width: 100%;
  background: linear-gradient(90deg, #D4FF00 0%, #e4ff33 100%);
  color: #000;
  font-weight: 900;
  padding: 1rem;
  border-radius: 0.5rem;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  font-size: 1rem;
  text-transform: uppercase;
}

.contacto__form-button:hover {
  box-shadow: 0 10px 30px rgba(212, 255, 0, 0.5);
}

.contacto__form-button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.contacto__form-button-icon {
  width: 1.25rem;
  height: 1.25rem;
}
</style>
{%- endif -%}

{% schema %}
{
  "name": "Contacto",
  "tag": "section",
  "class": "section-contacto",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_section",
      "label": "Show section",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "CONTACTANOS"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "¡Estamos aquí para ayudarte! Contáctanos."
    },
    {
      "type": "text",
      "id": "whatsapp_link",
      "label": "WhatsApp Link",
      "default": "https://wa.me/5511999999999"
    },
    {
      "type": "text",
      "id": "whatsapp_number",
      "label": "WhatsApp Number",
      "default": "+55 11 99999-9999"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email",
      "default": "contato@foltz.com.br"
    },
    {
      "type": "text",
      "id": "instagram_link",
      "label": "Instagram Link",
      "default": "https://instagram.com/foltz.oficial"
    },
    {
      "type": "text",
      "id": "instagram_handle",
      "label": "Instagram Handle",
      "default": "@foltz.oficial"
    }
  ],
  "presets": [
    {
      "name": "Contacto"
    }
  ]
}
{% endschema %}
