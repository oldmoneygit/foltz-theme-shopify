{% comment %}
  Seção de Reviews Compartilhados
  Usa o snippet shared-reviews.liquid
  Funciona tanto em home quanto em páginas de produto
{% endcomment %}

{%- render 'shared-reviews' -%}

<style>
/* Reviews Section Styles */
.product-reviews {
  background: #000;
  padding: 3rem 0 4rem;
  position: relative;
  overflow: hidden;
}

.product-reviews::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 1000px;
  height: 1000px;
  background: radial-gradient(circle, rgba(218, 241, 13, 0.05) 0%, transparent 70%);
  pointer-events: none;
}

.product-reviews__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
  position: relative;
  z-index: 1;
}

/* Header */
.product-reviews__header {
  text-align: center;
  margin-bottom: 3rem;
}

.product-reviews__heading {
  font-size: 2rem;
  font-weight: 900;
  color: #fff;
  margin: 0 0 0.5rem 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

@media (min-width: 768px) {
  .product-reviews__heading {
    font-size: 2.5rem;
  }
}

.product-reviews__subtitle {
  font-size: 1rem;
  color: rgba(255, 255, 255, 0.7);
  margin: 0 0 2rem 0;
}

.product-reviews__stats {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

@media (min-width: 640px) {
  .product-reviews__stats {
    flex-direction: row;
    justify-content: center;
  }
}

.product-reviews__rating {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.product-reviews__stars {
  display: flex;
  gap: 0.25rem;
}

.product-reviews__star {
  color: rgba(255, 255, 255, 0.2);
}

.product-reviews__star--filled {
  color: #DAF10D;
}

.product-reviews__rating-text {
  font-size: 1.25rem;
  font-weight: 700;
  color: #fff;
}

.product-reviews__count {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.6);
  padding-left: 1rem;
  border-left: 1px solid rgba(255, 255, 255, 0.2);
}

@media (max-width: 639px) {
  .product-reviews__count {
    padding-left: 0;
    border-left: none;
  }
}

/* Reviews Grid */
.product-reviews__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.5rem;
}

@media (min-width: 768px) {
  .product-reviews__grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (min-width: 1024px) {
  .product-reviews__grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* Individual Review */
.product-review {
  background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 1rem;
  padding: 1.5rem;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.product-review:hover {
  border-color: rgba(218, 241, 13, 0.3);
  transform: translateY(-4px);
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
}

.product-review__header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 1rem;
}

.product-review__author {
  display: flex;
  gap: 0.75rem;
  align-items: center;
}

.product-review__avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: linear-gradient(135deg, #DAF10D, #FAFF00);
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 900;
  font-size: 1.125rem;
  flex-shrink: 0;
}

.product-review__author-info {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.product-review__name {
  font-size: 0.9375rem;
  font-weight: 700;
  color: #fff;
  margin: 0;
}

.product-review__stars {
  display: flex;
  gap: 2px;
}

.product-review__badge {
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  background: rgba(16, 185, 129, 0.2);
  color: #10B981;
  font-size: 0.75rem;
  font-weight: 600;
  padding: 0.25rem 0.5rem;
  border-radius: 0.375rem;
  flex-shrink: 0;
}

.product-review__badge svg {
  width: 14px;
  height: 14px;
}

.product-review__text {
  color: rgba(255, 255, 255, 0.85);
  font-size: 0.9375rem;
  line-height: 1.6;
  margin: 0 0 1rem 0;
}

/* Review Images */
.product-review__images {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.product-review__image-wrapper {
  position: relative;
  aspect-ratio: 1;
  border-radius: 0.75rem;
  overflow: hidden;
  background: rgba(0, 0, 0, 0.3);
}

.product-review__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-review__image-wrapper:hover .product-review__image {
  transform: scale(1.1);
}

.product-review__image-badge {
  position: absolute;
  bottom: 0.5rem;
  right: 0.5rem;
  display: inline-flex;
  align-items: center;
  gap: 0.25rem;
  background: rgba(0, 0, 0, 0.8);
  color: #DAF10D;
  font-size: 0.625rem;
  font-weight: 600;
  padding: 0.25rem 0.5rem;
  border-radius: 0.25rem;
  backdrop-filter: blur(10px);
}

.product-review__image-badge svg {
  width: 12px;
  height: 12px;
}

.product-review__footer {
  display: flex;
  justify-content: flex-end;
  padding-top: 0.75rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.product-review__date {
  font-size: 0.75rem;
  color: rgba(255, 255, 255, 0.5);
}
</style>

{% schema %}
{
  "name": "Reseñas Compartidas",
  "tag": "section",
  "class": "section-shared-reviews",
  "enabled_on": {
    "templates": ["*"]
  },
  "settings": [
    {
      "type": "paragraph",
      "content": "Esta seção exibe reviews compartilhados configurados no snippet shared-reviews.liquid. Edite o snippet para alterar os reviews."
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Lo Que Dicen Nuestros Clientes"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Miles de clientes satisfechos con nuestros productos"
    },
    {
      "type": "text",
      "id": "rating",
      "label": "Rating Promedio",
      "default": "4.9",
      "info": "Rating de 0-5"
    }
  ],
  "presets": [
    {
      "name": "Reseñas Compartidas"
    }
  ]
}
{% endschema %}
