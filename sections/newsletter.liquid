<!--
  Section: Newsletter
  Descrição: Seção de inscrição para newsletter
-->

<style>
  .newsletter-section {
    padding: 80px 0;
    background: linear-gradient(135deg, rgba(218, 241, 13, 0.1) 0%, rgba(0, 0, 0, 0) 100%);
    position: relative;
    overflow: hidden;
  }

  .newsletter-section::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 800px;
    background: radial-gradient(circle, rgba(218, 241, 13, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }

  .newsletter-section__container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 24px;
    text-align: center;
    position: relative;
    z-index: 1;
  }

  .newsletter-section__badge {
    display: inline-block;
    padding: 8px 16px;
    background: rgba(218, 241, 13, 0.1);
    border: 1px solid rgba(218, 241, 13, 0.2);
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--color-brand-yellow);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 24px;
  }

  .newsletter-section__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .newsletter-section__text {
    font-size: 1.125rem;
    color: var(--color-text-subdued);
    margin-bottom: 32px;
    line-height: 1.6;
  }

  .newsletter-section__form {
    max-width: 500px;
    margin: 0 auto;
  }

  .newsletter-section__input-wrapper {
    display: flex;
    gap: 12px;
    margin-bottom: 16px;
  }

  .newsletter-section__input {
    flex: 1;
    padding: 16px 20px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #FFFFFF;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .newsletter-section__input:focus {
    outline: none;
    border-color: var(--color-brand-yellow);
    background: rgba(255, 255, 255, 0.08);
  }

  .newsletter-section__input::placeholder {
    color: var(--color-text-subdued);
  }

  .newsletter-section__submit {
    padding: 16px 32px;
    background: var(--color-brand-yellow);
    color: #000000;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .newsletter-section__submit:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .newsletter-section__message {
    padding: 12px;
    border-radius: 6px;
    font-size: 0.875rem;
    margin-top: 16px;
  }

  .newsletter-section__message--success {
    background: rgba(22, 163, 74, 0.1);
    color: #16A34A;
    border: 1px solid rgba(22, 163, 74, 0.2);
  }

  .newsletter-section__message--error {
    background: rgba(239, 68, 68, 0.1);
    color: #EF4444;
    border: 1px solid rgba(239, 68, 68, 0.2);
  }

  .newsletter-section__privacy {
    font-size: 0.75rem;
    color: var(--color-text-subdued);
    margin-top: 16px;
  }

  @media (max-width: 768px) {
    .newsletter-section {
      padding: 60px 0;
    }

    .newsletter-section__container {
      padding: 0 16px;
    }

    .newsletter-section__title {
      font-size: 1.75rem;
    }

    .newsletter-section__text {
      font-size: 1rem;
    }

    .newsletter-section__input-wrapper {
      flex-direction: column;
    }

    .newsletter-section__submit {
      width: 100%;
    }
  }
</style>

<div class="newsletter-section">
  <div class="newsletter-section__container">
    {%- if section.settings.badge != blank -%}
      <div class="newsletter-section__badge">{{ section.settings.badge }}</div>
    {%- endif -%}

    <h2 class="newsletter-section__title">{{ section.settings.title }}</h2>

    {%- if section.settings.text != blank -%}
      <p class="newsletter-section__text">{{ section.settings.text }}</p>
    {%- endif -%}

    {%- form 'customer', class: 'newsletter-section__form' -%}
      <input type="hidden" name="contact[tags]" value="newsletter">

      <div class="newsletter-section__input-wrapper">
        <input
          type="email"
          name="contact[email]"
          class="newsletter-section__input"
          placeholder="{{ section.settings.placeholder | default: 'Enter your email' }}"
          required
          aria-label="Email address"
        >
        <button type="submit" class="newsletter-section__submit">
          {{ section.settings.button_text | default: 'Subscribe' }}
        </button>
      </div>

      {%- if form.posted_successfully? -%}
        <div class="newsletter-section__message newsletter-section__message--success">
          {{ section.settings.success_message | default: 'Thanks for subscribing!' }}
        </div>
      {%- endif -%}

      {%- if form.errors -%}
        <div class="newsletter-section__message newsletter-section__message--error">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}
    {%- endform -%}

    {%- if section.settings.show_privacy_text -%}
      <p class="newsletter-section__privacy">
        {{ section.settings.privacy_text | default: 'We respect your privacy. Unsubscribe at any time.' }}
      </p>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "badge",
      "label": "Badge text",
      "default": "Newsletter"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Stay in the Loop"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description",
      "default": "Subscribe to our newsletter for exclusive deals, new arrivals, and insider updates."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "Enter your email"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thanks for subscribing!"
    },
    {
      "type": "checkbox",
      "id": "show_privacy_text",
      "label": "Show privacy text",
      "default": true
    },
    {
      "type": "text",
      "id": "privacy_text",
      "label": "Privacy text",
      "default": "We respect your privacy. Unsubscribe at any time."
    }
  ],
  "presets": [
    {
      "name": "Newsletter"
    }
  ]
}
{% endschema %}
