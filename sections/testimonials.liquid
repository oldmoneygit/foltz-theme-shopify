<!--
  Section: Testimonials
  Descrição: Seção de depoimentos de clientes
-->

<style>
  .testimonials-section {
    padding: 80px 0;
    background: #000000;
  }

  .testimonials-section__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .testimonials-section__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .testimonials-section__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-brand-yellow);
    margin-bottom: 16px;
  }

  .testimonials-section__text {
    font-size: 1.125rem;
    color: var(--color-text-subdued);
  }

  .testimonials-section__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 32px;
  }

  .testimonial-card {
    padding: 32px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    transition: all 0.3s ease;
    position: relative;
  }

  .testimonial-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(218, 241, 13, 0.3);
    transform: translateY(-4px);
  }

  .testimonial-card__quote-icon {
    width: 40px;
    height: 40px;
    color: var(--color-brand-yellow);
    opacity: 0.3;
    margin-bottom: 16px;
  }

  .testimonial-card__stars {
    display: flex;
    gap: 4px;
    margin-bottom: 16px;
  }

  .testimonial-card__star {
    width: 20px;
    height: 20px;
    color: var(--color-brand-yellow);
  }

  .testimonial-card__text {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-text-subdued);
    margin-bottom: 24px;
    font-style: italic;
  }

  .testimonial-card__author {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .testimonial-card__avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.1);
  }

  .testimonial-card__avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .testimonial-card__author-info {
    flex: 1;
  }

  .testimonial-card__author-name {
    font-size: 1rem;
    font-weight: 600;
    color: #FFFFFF;
    margin-bottom: 4px;
  }

  .testimonial-card__author-title {
    font-size: 0.875rem;
    color: var(--color-text-subdued);
  }

  @media (max-width: 768px) {
    .testimonials-section {
      padding: 60px 0;
    }

    .testimonials-section__container {
      padding: 0 16px;
    }

    .testimonials-section__title {
      font-size: 2rem;
    }

    .testimonials-section__grid {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .testimonial-card {
      padding: 24px;
    }
  }
</style>

<div class="testimonials-section">
  <div class="testimonials-section__container">
    <div class="testimonials-section__header">
      <h2 class="testimonials-section__title">{{ section.settings.title }}</h2>
      {%- if section.settings.text != blank -%}
        <p class="testimonials-section__text">{{ section.settings.text }}</p>
      {%- endif -%}
    </div>

    <div class="testimonials-section__grid">
      {%- for block in section.blocks -%}
        <div class="testimonial-card" {{ block.shopify_attributes }}>
          <svg class="testimonial-card__quote-icon" viewBox="0 0 24 24" fill="currentColor">
            <path d="M4.583 17.321C3.553 16.227 3 15 3 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179zm10 0C13.553 16.227 13 15 13 13.011c0-3.5 2.457-6.637 6.03-8.188l.893 1.378c-3.335 1.804-3.987 4.145-4.247 5.621.537-.278 1.24-.375 1.929-.311 1.804.167 3.226 1.648 3.226 3.489a3.5 3.5 0 01-3.5 3.5c-1.073 0-2.099-.49-2.748-1.179z"/>
          </svg>

          <div class="testimonial-card__stars">
            {%- assign rating = block.settings.rating | default: 5 -%}
            {%- for i in (1..5) -%}
              <svg class="testimonial-card__star" viewBox="0 0 24 24" fill="{%- if i <= rating -%}currentColor{%- else -%}none{%- endif -%}" stroke="currentColor" stroke-width="2">
                <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
              </svg>
            {%- endfor -%}
          </div>

          <p class="testimonial-card__text">{{ block.settings.text }}</p>

          <div class="testimonial-card__author">
            {%- if block.settings.avatar != blank -%}
              <div class="testimonial-card__avatar">
                <img src="{{ block.settings.avatar | img_url: '100x' }}" alt="{{ block.settings.author_name }}">
              </div>
            {%- endif -%}
            <div class="testimonial-card__author-info">
              <div class="testimonial-card__author-name">{{ block.settings.author_name }}</div>
              {%- if block.settings.author_title != blank -%}
                <div class="testimonial-card__author-title">{{ block.settings.author_title }}</div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "What Our Customers Say"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Testimonial text",
          "default": "Amazing quality and fast shipping! I love my new jersey."
        },
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author name",
          "default": "John Doe"
        },
        {
          "type": "text",
          "id": "author_title",
          "label": "Author title",
          "default": "Verified Customer"
        },
        {
          "type": "image_picker",
          "id": "avatar",
          "label": "Author avatar"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
