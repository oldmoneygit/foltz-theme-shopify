<style>
.product-info-tabs {
  background: #000;
  padding: 2rem 0 3rem;
}

.product-info-tabs__container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 1rem;
}

.product-info-tabs__heading {
  font-size: 1.875rem;
  font-weight: 900;
  color: #fff;
  text-align: center;
  margin: 0 0 2rem 0;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

@media (min-width: 768px) {
  .product-info-tabs__heading {
    font-size: 2.5rem;
  }
}

/* Tabs */
.product-info-tabs__tabs {
  display: flex;
  gap: 0.5rem;
  margin-bottom: 2rem;
  overflow-x: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 0.5rem;
}

.product-info-tabs__tab {
  flex: 1;
  min-width: fit-content;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.5rem;
  padding: 0.875rem 1rem;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 0.75rem;
  color: rgba(255, 255, 255, 0.7);
  font-size: 0.875rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  white-space: nowrap;
}

@media (min-width: 768px) {
  .product-info-tabs__tab {
    font-size: 1rem;
    padding: 1rem 1.5rem;
  }
}

.product-info-tabs__tab:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(218, 241, 13, 0.3);
}

.product-info-tabs__tab.active {
  background: linear-gradient(135deg, rgba(218, 241, 13, 0.2), rgba(218, 241, 13, 0.1));
  border-color: rgba(218, 241, 13, 0.5);
  color: #DAF10D;
  box-shadow: 0 4px 12px rgba(218, 241, 13, 0.2);
}

.product-info-tabs__tab-icon {
  width: 18px;
  height: 18px;
  flex-shrink: 0;
}

@media (min-width: 768px) {
  .product-info-tabs__tab-icon {
    width: 20px;
    height: 20px;
  }
}

/* Content */
.product-info-tabs__content {
  position: relative;
}

.product-info-tabs__panel {
  display: none;
  animation: fadeIn 0.5s ease;
}

.product-info-tabs__panel.active {
  display: block;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.product-info-tabs__panel-inner {
  background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 1rem;
  padding: 1.5rem;
  backdrop-filter: blur(10px);
}

@media (min-width: 768px) {
  .product-info-tabs__panel-inner {
    padding: 2rem;
  }
}

.product-info-tabs__panel-title {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  font-size: 1.25rem;
  font-weight: 700;
  color: #DAF10D;
  margin: 0 0 1.5rem 0;
}

@media (min-width: 768px) {
  .product-info-tabs__panel-title {
    font-size: 1.5rem;
  }
}

.product-info-tabs__panel-title svg {
  color: #DAF10D;
  flex-shrink: 0;
}

/* Features */
.product-info-tabs__features {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.product-info-tabs__feature {
  display: flex;
  gap: 0.75rem;
  align-items: flex-start;
  padding: 0.75rem;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 0.5rem;
  transition: all 0.3s ease;
}

.product-info-tabs__feature:hover {
  background: rgba(0, 0, 0, 0.5);
  transform: translateX(4px);
}

.product-info-tabs__feature svg {
  color: #10B981;
  flex-shrink: 0;
  margin-top: 2px;
}

.product-info-tabs__feature div {
  color: rgba(255, 255, 255, 0.9);
  font-size: 0.875rem;
  line-height: 1.6;
}

@media (min-width: 768px) {
  .product-info-tabs__feature div {
    font-size: 1rem;
  }
}

.product-info-tabs__feature strong {
  color: #fff;
  font-weight: 600;
}

/* Link */
.product-info-tabs__link {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  color: #DAF10D;
  font-size: 0.875rem;
  font-weight: 600;
  text-decoration: none;
  margin-top: 1.5rem;
  transition: all 0.2s ease;
}

.product-info-tabs__link:hover {
  color: #FAFF00;
  gap: 0.75rem;
}

.product-info-tabs__link svg {
  transition: transform 0.2s ease;
}

.product-info-tabs__link:hover svg {
  transform: translateX(2px);
}
</style>

<script>
(function() {
  const tabs = document.querySelectorAll('.product-info-tabs__tab');
  const panels = document.querySelectorAll('.product-info-tabs__panel');

  tabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const targetPanel = tab.dataset.tab;

      // Remove active class from all tabs and panels
      tabs.forEach(t => t.classList.remove('active'));
      panels.forEach(p => p.classList.remove('active'));

      // Add active class to clicked tab and corresponding panel
      tab.classList.add('active');
      document.querySelector(`[data-panel="${targetPanel}"]`).classList.add('active');
    });
  });
})();
</script>

