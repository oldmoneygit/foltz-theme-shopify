<!--
  Section: Main Page
  Descrição: Template genérico para páginas estáticas (About, Contact, etc.)
-->

<style>
  .page-main {
    padding: 40px 0 80px;
    background: #000000;
    min-height: 60vh;
  }

  .page-main__container {
    max-width: 1000px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .page-main__header {
    margin-bottom: 40px;
    text-align: center;
  }

  .page-main__title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-brand-yellow);
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .page-main__subtitle {
    font-size: 1.25rem;
    color: var(--color-text-subdued);
    line-height: 1.6;
  }

  .page-main__content {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 48px;
  }

  .page-main__content h1,
  .page-main__content h2,
  .page-main__content h3,
  .page-main__content h4,
  .page-main__content h5,
  .page-main__content h6 {
    color: #FFFFFF;
    font-weight: 700;
    margin-bottom: 16px;
    margin-top: 32px;
  }

  .page-main__content h1 { font-size: 2.5rem; }
  .page-main__content h2 { font-size: 2rem; }
  .page-main__content h3 { font-size: 1.5rem; }
  .page-main__content h4 { font-size: 1.25rem; }
  .page-main__content h5 { font-size: 1.125rem; }
  .page-main__content h6 { font-size: 1rem; }

  .page-main__content h1:first-child,
  .page-main__content h2:first-child,
  .page-main__content h3:first-child,
  .page-main__content h4:first-child,
  .page-main__content h5:first-child,
  .page-main__content h6:first-child {
    margin-top: 0;
  }

  .page-main__content p {
    font-size: 1rem;
    color: var(--color-text-subdued);
    line-height: 1.8;
    margin-bottom: 24px;
  }

  .page-main__content a {
    color: var(--color-brand-yellow);
    text-decoration: underline;
    transition: opacity 0.3s ease;
  }

  .page-main__content a:hover {
    opacity: 0.8;
  }

  .page-main__content ul,
  .page-main__content ol {
    margin-left: 24px;
    margin-bottom: 24px;
    color: var(--color-text-subdued);
  }

  .page-main__content li {
    margin-bottom: 12px;
    line-height: 1.6;
  }

  .page-main__content blockquote {
    padding: 24px;
    margin: 32px 0;
    background: rgba(218, 241, 13, 0.05);
    border-left: 4px solid var(--color-brand-yellow);
    border-radius: 8px;
  }

  .page-main__content blockquote p {
    font-size: 1.125rem;
    color: #FFFFFF;
    font-style: italic;
    margin-bottom: 0;
  }

  .page-main__content img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 32px 0;
  }

  .page-main__content table {
    width: 100%;
    border-collapse: collapse;
    margin: 32px 0;
    background: rgba(255, 255, 255, 0.02);
    border-radius: 8px;
    overflow: hidden;
  }

  .page-main__content th,
  .page-main__content td {
    padding: 16px;
    text-align: left;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .page-main__content th {
    background: rgba(218, 241, 13, 0.1);
    color: var(--color-brand-yellow);
    font-weight: 700;
  }

  .page-main__content td {
    color: var(--color-text-subdued);
  }

  .page-main__content tr:last-child td {
    border-bottom: none;
  }

  .page-main__content hr {
    border: none;
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 40px 0;
  }

  .page-main__content code {
    padding: 2px 8px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.875rem;
    color: var(--color-brand-yellow);
  }

  .page-main__content pre {
    padding: 24px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    overflow-x: auto;
    margin: 24px 0;
  }

  .page-main__content pre code {
    padding: 0;
    background: none;
    color: #FFFFFF;
  }

  .page-main__content strong {
    color: #FFFFFF;
    font-weight: 700;
  }

  .page-main__content em {
    font-style: italic;
  }

  .page-main__divider {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 48px 0;
  }

  .page-main__footer {
    margin-top: 48px;
    text-align: center;
  }

  .page-main__back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: #FFFFFF;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .page-main__back:hover {
    border-color: var(--color-brand-yellow);
    color: var(--color-brand-yellow);
    background: rgba(218, 241, 13, 0.05);
  }

  /* Narrow content width variant */
  .page-main--narrow .page-main__container {
    max-width: 800px;
  }

  /* Wide content variant */
  .page-main--wide .page-main__container {
    max-width: 1400px;
  }

  /* Centered text variant */
  .page-main--centered .page-main__content {
    text-align: center;
  }

  @media (max-width: 768px) {
    .page-main {
      padding: 20px 0 60px;
    }

    .page-main__container {
      padding: 0 16px;
    }

    .page-main__title {
      font-size: 2rem;
    }

    .page-main__subtitle {
      font-size: 1rem;
    }

    .page-main__content {
      padding: 32px 24px;
    }

    .page-main__content h1 { font-size: 1.75rem; }
    .page-main__content h2 { font-size: 1.5rem; }
    .page-main__content h3 { font-size: 1.25rem; }
    .page-main__content h4 { font-size: 1.125rem; }

    .page-main__content table {
      font-size: 0.875rem;
    }

    .page-main__content th,
    .page-main__content td {
      padding: 12px 8px;
    }
  }
</style>

<div class="page-main {% if section.settings.content_width == 'narrow' %}page-main--narrow{% elsif section.settings.content_width == 'wide' %}page-main--wide{% endif %} {% if section.settings.text_alignment == 'center' %}page-main--centered{% endif %}">
  <div class="page-main__container">
    {%- if section.settings.show_header -%}
      <div class="page-main__header">
        <h1 class="page-main__title">{{ page.title }}</h1>
        {%- if section.settings.subtitle != blank -%}
          <p class="page-main__subtitle">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="page-main__content">
      {{ page.content }}
    </div>

    {%- if section.settings.show_divider -%}
      <div class="page-main__divider"></div>
    {%- endif -%}

    {%- if section.settings.show_back_link -%}
      <div class="page-main__footer">
        <a href="{{ section.settings.back_link_url | default: routes.root_url }}" class="page-main__back">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="19" y1="12" x2="5" y2="12"></line>
            <polyline points="12 19 5 12 12 5"></polyline>
          </svg>
          {{ section.settings.back_link_text | default: 'general.back_to_home' | t }}
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Page Content",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_header",
      "label": "Show page header",
      "default": true
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "info": "Optional subtitle below the page title"
    },
    {
      "type": "select",
      "id": "content_width",
      "label": "Content width",
      "options": [
        {
          "value": "narrow",
          "label": "Narrow (800px)"
        },
        {
          "value": "default",
          "label": "Default (1000px)"
        },
        {
          "value": "wide",
          "label": "Wide (1400px)"
        }
      ],
      "default": "default"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "label": "Show divider after content",
      "default": false
    },
    {
      "type": "header",
      "content": "Back Link"
    },
    {
      "type": "checkbox",
      "id": "show_back_link",
      "label": "Show back link",
      "default": true
    },
    {
      "type": "text",
      "id": "back_link_text",
      "label": "Back link text",
      "default": "Back to Home"
    },
    {
      "type": "url",
      "id": "back_link_url",
      "label": "Back link URL",
      "info": "Leave empty to link to homepage"
    }
  ]
}
{% endschema %}
