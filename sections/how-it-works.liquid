<!--
  Section: How It Works
  Descrição: Explica como funciona a promoção COMPRA 1 LLEVA 3
-->

<style>
  .how-it-works {
    padding: 64px 24px;
    background: #000000;
  }

  .how-it-works__container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Header */
  .how-it-works__header {
    text-align: center;
    margin-bottom: 48px;
  }

  .how-it-works__badge {
    display: inline-block;
    background: var(--color-accent, #DAF10D);
    color: #000000;
    padding: 8px 16px;
    border-radius: 24px;
    font-size: 0.75rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 16px;
  }

  .how-it-works__title {
    font-size: 2rem;
    font-weight: 900;
    color: #FFFFFF;
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .how-it-works__title-highlight {
    color: var(--color-accent, #DAF10D);
  }

  .how-it-works__subtitle {
    color: #D1D5DB;
    font-size: 1rem;
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .how-it-works__subtitle-highlight {
    color: var(--color-accent, #DAF10D);
    font-weight: 700;
  }

  /* Steps Grid */
  .how-it-works__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
    margin-bottom: 48px;
  }

  .how-it-works__step {
    position: relative;
    background: linear-gradient(135deg, #18181B 0%, #09090B 100%);
    border: 1px solid #27272A;
    border-radius: 12px;
    padding: 24px;
    transition: all 0.3s ease;
  }

  .how-it-works__step:hover {
    border-color: rgba(218, 241, 13, 0.5);
    transform: translateY(-4px);
  }

  .how-it-works__step-number {
    position: absolute;
    top: -12px;
    left: -12px;
    width: 40px;
    height: 40px;
    background: var(--color-accent, #DAF10D);
    color: #000000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 900;
    font-size: 1.125rem;
    z-index: 10;
  }

  .how-it-works__step-icon {
    width: 56px;
    height: 56px;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 16px;
  }

  .how-it-works__step-icon svg {
    width: 28px;
    height: 28px;
    stroke: #FFFFFF;
    fill: none;
  }

  .how-it-works__step-icon--blue {
    background: #3B82F6;
  }

  .how-it-works__step-icon--yellow {
    background: #EAB308;
  }

  .how-it-works__step-icon--pink {
    background: #EC4899;
  }

  .how-it-works__step-icon--green {
    background: #10B981;
  }

  .how-it-works__step-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: #FFFFFF;
    margin-bottom: 8px;
  }

  .how-it-works__step-description {
    color: #9CA3AF;
    font-size: 0.875rem;
    line-height: 1.6;
  }

  /* Bottom Info Box */
  .how-it-works__info-box {
    background: linear-gradient(to right, rgba(161, 98, 7, 0.3), rgba(113, 63, 18, 0.3));
    border: 2px solid rgba(161, 98, 7, 0.5);
    border-radius: 16px;
    padding: 32px;
    text-align: center;
  }

  .how-it-works__info-title {
    font-size: 1.5rem;
    font-weight: 900;
    color: #FFFFFF;
    margin-bottom: 16px;
  }

  .how-it-works__info-title-highlight {
    color: var(--color-accent, #DAF10D);
  }

  .how-it-works__info-text {
    color: #D1D5DB;
    margin-bottom: 24px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .how-it-works__info-text strong {
    color: #FFFFFF;
    font-weight: 700;
  }

  .how-it-works__badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
  }

  .how-it-works__badge-item {
    display: flex;
    align-items: center;
    gap: 8px;
    background: rgba(5, 46, 22, 0.5);
    border: 1px solid rgba(21, 128, 61, 0.5);
    padding: 8px 16px;
    border-radius: 24px;
    font-size: 0.875rem;
    font-weight: 600;
    color: #4ADE80;
  }

  .how-it-works__badge-item svg {
    width: 16px;
    height: 16px;
    stroke: currentColor;
    fill: none;
  }

  /* Responsive */
  @media (min-width: 768px) {
    .how-it-works {
      padding: 96px 24px;
    }

    .how-it-works__title {
      font-size: 3rem;
    }

    .how-it-works__subtitle {
      font-size: 1.125rem;
    }

    .how-it-works__info-title {
      font-size: 2rem;
    }
  }

  @media (min-width: 1024px) {
    .how-it-works__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
</style>

<section class="how-it-works">
  <div class="how-it-works__container">
