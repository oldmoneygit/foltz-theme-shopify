  text-align: center;
  margin-bottom: 3rem;
}

.privacidade-page__header-icon-wrapper {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(218, 241, 13, 0.2), rgba(250, 255, 0, 0.1));
  margin-bottom: 1.5rem;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
