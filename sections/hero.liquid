{%- comment -%}
  HERO SECTION
  Replicates: src/components/Hero.jsx
{%- endcomment -%}

<section class="hero">
  <!-- Background Image - Desktop -->
  <div class="hero-background hero-background-desktop">
    {%- if section.settings.background_image_desktop -%}
      <img
        src="{{ section.settings.background_image_desktop | img_url: '1536x' }}"
        srcset="
          {{ section.settings.background_image_desktop | img_url: '1024x' }} 1024w,
          {{ section.settings.background_image_desktop | img_url: '1536x' }} 1536w,
          {{ section.settings.background_image_desktop | img_url: '2048x' }} 2048w
        "
        sizes="100vw"
        alt="{{ section.settings.title | escape }}"
        loading="eager"
      >
    {%- else -%}
      <img
        src="{{ 'hero-placeholder.jpg' | asset_url }}"
        alt="Hero Desktop"
        loading="eager"
      >
    {%- endif -%}
  </div>

  <!-- Background Image - Mobile -->
  <div class="hero-background hero-background-mobile">
    {%- if section.settings.background_image_mobile -%}
      <img
        src="{{ section.settings.background_image_mobile | img_url: '800x' }}"
        srcset="
          {{ section.settings.background_image_mobile | img_url: '640x' }} 640w,
          {{ section.settings.background_image_mobile | img_url: '800x' }} 800w,
          {{ section.settings.background_image_mobile | img_url: '1024x' }} 1024w
        "
        sizes="100vw"
        alt="{{ section.settings.title | escape }}"
        loading="eager"
      >
    {%- elsif section.settings.background_image_desktop -%}
      {%- comment -%} Fallback to desktop image if mobile not set {%- endcomment -%}
      <img
        src="{{ section.settings.background_image_desktop | img_url: '800x' }}"
        alt="{{ section.settings.title | escape }}"
        loading="eager"
      >
    {%- else -%}
      <img
        src="{{ 'hero-placeholder.jpg' | asset_url }}"
        alt="Hero Mobile"
        loading="eager"
      >
    {%- endif -%}
  </div>

  <!-- Gradient Overlay -->
  <div class="hero-overlay"></div>

  <!-- Content -->
  <div class="hero-content">
    <!-- Badge -->
    {%- if section.settings.badge_text != blank -%}
      <span class="hero-badge">{{ section.settings.badge_text }}</span>
    {%- endif -%}

    <!-- Title -->
    {%- if section.settings.title != blank -%}
      <h1 class="hero-title">{{ section.settings.title }}</h1>
    {%- endif -%}

    <!-- CTA Button -->
    {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
      <div class="hero-cta">
        <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-rounded">
          {{ section.settings.button_text }}
        </a>
      </div>
    {%- endif -%}
  </div>

  <!-- Scroll Indicator (Desktop Only) -->
  <div class="scroll-indicator">
    <span>Scroll</span>
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "header",
      "content": "Imagens"
    },
    {
      "type": "image_picker",
      "id": "background_image_desktop",
      "label": "Imagem de Fundo - Desktop",
      "info": "Recomendado: 2048x1080px (paisagem/horizontal)"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Imagem de Fundo - Mobile",
      "info": "Recomendado: 800x1200px (retrato/vertical). Se não definida, usa a imagem desktop."
    },
    {
      "type": "header",
      "content": "Conteúdo"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Camisas Exclusivas"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "CAMISAS DE FUTEBOL EXCLUSIVAS"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explorar Colección"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}
