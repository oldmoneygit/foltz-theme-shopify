{%- comment -%}
  HERO SECTION
  Replicates: src/components/Hero.jsx
{%- endcomment -%}

<section class="hero">
  <!-- Background Image - Responsive Picture Tag -->
  <div class="hero-background">
    {%- if section.settings.background_image_mobile or section.settings.background_image_desktop -%}
      <picture>
        {%- comment -%} Mobile image (for screens up to 749px) {%- endcomment -%}
        {%- if section.settings.background_image_mobile -%}
          <source
            media="(max-width: 749px)"
            srcset="
              {{ section.settings.background_image_mobile | img_url: '375x' }} 375w,
              {{ section.settings.background_image_mobile | img_url: '550x' }} 550w,
              {{ section.settings.background_image_mobile | img_url: '750x' }} 750w
            "
            sizes="100vw"
          >
        {%- endif -%}

        {%- comment -%} Tablet image (for screens 750px to 989px) {%- endcomment -%}
        {%- if section.settings.background_image_desktop -%}
          <source
            media="(min-width: 750px) and (max-width: 989px)"
            srcset="
              {{ section.settings.background_image_desktop | img_url: '750x' }} 750w,
              {{ section.settings.background_image_desktop | img_url: '990x' }} 990w
            "
            sizes="100vw"
          >
        {%- endif -%}

        {%- comment -%} Desktop image (for screens 990px and up) {%- endcomment -%}
        {%- if section.settings.background_image_desktop -%}
          <source
            media="(min-width: 990px)"
            srcset="
              {{ section.settings.background_image_desktop | img_url: '1100x' }} 1100w,
              {{ section.settings.background_image_desktop | img_url: '1500x' }} 1500w,
              {{ section.settings.background_image_desktop | img_url: '1780x' }} 1780w,
              {{ section.settings.background_image_desktop | img_url: '2000x' }} 2000w,
              {{ section.settings.background_image_desktop | img_url: '3000x' }} 3000w
            "
            sizes="100vw"
          >
        {%- endif -%}

        {%- comment -%} Fallback image {%- endcomment -%}
        <img
          src="{{ section.settings.background_image_desktop | default: section.settings.background_image_mobile | img_url: '1500x' }}"
          alt="{{ section.settings.title | escape }}"
          loading="eager"
          width="100%"
          height="auto"
        >
      </picture>
    {%- else -%}
      <img
        src="{{ 'hero-placeholder.jpg' | asset_url }}"
        alt="Hero"
        loading="eager"
        width="100%"
        height="auto"
      >
    {%- endif -%}
  </div>

  <!-- Gradient Overlay -->
  <div class="hero-overlay"></div>

  <!-- Content -->
  <div class="hero-content">
    <!-- Badge -->
    {%- if section.settings.badge_text != blank -%}
      <span class="hero-badge">{{ section.settings.badge_text }}</span>
    {%- endif -%}

    <!-- Title -->
    {%- if section.settings.title != blank -%}
      <h1 class="hero-title">{{ section.settings.title }}</h1>
    {%- endif -%}

    <!-- CTA Button -->
    {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
      <div class="hero-cta">
        <a href="{{ section.settings.button_link }}" class="btn btn-primary btn-rounded">
          {{ section.settings.button_text }}
        </a>
      </div>
    {%- endif -%}
  </div>

  <!-- Scroll Indicator (Desktop Only) -->
  <div class="scroll-indicator">
    <span>Scroll</span>
    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polyline points="6 9 12 15 18 9"></polyline>
    </svg>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "header",
      "content": "Imagens"
    },
    {
      "type": "image_picker",
      "id": "background_image_desktop",
      "label": "Imagem de Fundo - Desktop",
      "info": "Recomendado: 2048x1080px (paisagem/horizontal)"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "Imagem de Fundo - Mobile",
      "info": "Recomendado: 800x1200px (retrato/vertical). Se não definida, usa a imagem desktop."
    },
    {
      "type": "header",
      "content": "Conteúdo"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Camisas Exclusivas"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "CAMISAS DE FUTEBOL EXCLUSIVAS"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Explorar Colección"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ]
}
{% endschema %}
