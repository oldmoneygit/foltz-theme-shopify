<script>
// Mock order data
const mockOrders = {
  'FZ123456': {
    number: 'FZ123456',
    status: 'delivered',
    statusText: 'Entregado',
    date: '15/10/2024',
    estimatedDelivery: '12-15/10/2024',
    items: [
      { name: 'Real Madrid 24/25 Home', size: 'L', quantity: 1 }
    ],
    timeline: [
      { text: 'Pedido Confirmado', date: '10/10/2024 09:30', completed: true },
      { text: 'Preparando Envío', date: '10/10/2024 14:20', completed: true },
      { text: 'En Camino', date: '11/10/2024 08:15', completed: true },
      { text: 'En Reparto', date: '15/10/2024 07:00', completed: true },
      { text: 'Entregado', date: '15/10/2024 11:45', completed: true }
    ]
  },
  'FZ789012': {
    number: 'FZ789012',
    status: 'shipped',
    statusText: 'En Camino',
    date: '23/10/2024',
    estimatedDelivery: '26-28/10/2024',
    items: [
      { name: 'Barcelona 24/25 Away', size: 'M', quantity: 1 },
      { name: 'PSG 24/25 Home', size: 'XL', quantity: 1 }
    ],
    timeline: [
      { text: 'Pedido Confirmado', date: '23/10/2024 10:15', completed: true },
      { text: 'Preparando Envío', date: '23/10/2024 16:30', completed: true },
      { text: 'En Camino', date: '24/10/2024 09:00', completed: true },
      { text: 'En Reparto', date: 'Pendiente', completed: false },
      { text: 'Entregado', date: 'Pendiente', completed: false }
    ]
  }
};

// Handle form submission
document.getElementById('tracking-form').addEventListener('submit', function(e) {
  e.preventDefault();

  const trackingNumber = document.getElementById('tracking-number').value.toUpperCase();
  const order = mockOrders[trackingNumber];

  // Hide info cards
  document.getElementById('info-cards').style.display = 'none';

  if (!order) {
    // Show not found
    document.getElementById('not-found').style.display = 'block';
    document.getElementById('order-results').style.display = 'none';
    return;
  }

  // Hide not found
  document.getElementById('not-found').style.display = 'none';

  // Populate order data
  document.getElementById('order-number').textContent = '#' + order.number;
  document.getElementById('order-date').textContent = order.date;

  // Status badge
  const badge = document.getElementById('order-status-badge');
  badge.textContent = order.statusText;
  badge.className = 'seguimiento-page__status-badge';
  if (order.status === 'delivered') {
    badge.classList.add('seguimiento-page__status-badge--delivered');
  } else {
    badge.classList.add('seguimiento-page__status-badge--shipped');
  }

  // Items
  const itemsHtml = order.items.map(item =>
    `<div class="seguimiento-page__item">${item.quantity}x ${item.name} - Talla ${item.size}</div>`
  ).join('');
  document.getElementById('order-items').innerHTML = itemsHtml;

  // Estimated delivery
  const deliveryBanner = document.getElementById('estimated-delivery');
  if (order.status !== 'delivered') {
    document.getElementById('delivery-date').textContent = order.estimatedDelivery;
    deliveryBanner.style.display = 'flex';
  } else {
    deliveryBanner.style.display = 'none';
  }

  // Timeline
  const timelineHtml = order.timeline.map(item => `
    <div class="seguimiento-page__timeline-item">
      <div class="seguimiento-page__timeline-icon ${item.completed ? 'seguimiento-page__timeline-icon--completed' : 'seguimiento-page__timeline-icon--pending'}">
        ${item.completed
          ? '<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>'
          : '<div class="seguimiento-page__timeline-dot"></div>'
        }
      </div>
      <div class="seguimiento-page__timeline-content">
        <h4 class="seguimiento-page__timeline-text ${item.completed ? 'seguimiento-page__timeline-text--completed' : 'seguimiento-page__timeline-text--pending'}">
          ${item.text}
        </h4>
        <p class="seguimiento-page__timeline-date ${item.completed ? 'seguimiento-page__timeline-date--completed' : 'seguimiento-page__timeline-date--pending'}">
          ${item.date}
        </p>
      </div>
    </div>
  `).join('');
  document.getElementById('timeline').innerHTML = timelineHtml;

  // Show results
  document.getElementById('order-results').style.display = 'block';

  // Scroll to results
  document.getElementById('order-results').scrollIntoView({ behavior: 'smooth', block: 'start' });
});
</script>

