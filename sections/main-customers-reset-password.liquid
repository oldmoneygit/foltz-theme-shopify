<!--
  Section: Customer Reset Password
  Descrição: Página de reset de senha
-->

<style>
  .customer-reset {
    min-height: calc(100vh - var(--header-height, 80px) - var(--footer-height, 300px));
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 80px 24px;
    background: linear-gradient(135deg, #000000 0%, #1a1a1a 100%);
  }

  .customer-reset__container {
    width: 100%;
    max-width: 480px;
  }

  .customer-reset__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .customer-reset__title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-brand-yellow);
    margin-bottom: 8px;
  }

  .customer-reset__subtitle {
    font-size: 1rem;
    color: var(--color-text-subdued);
  }

  .customer-reset__form {
    background: rgba(0, 0, 0, 0.6);
    border: 1px solid rgba(218, 241, 13, 0.1);
    border-radius: 12px;
    padding: 40px;
    backdrop-filter: blur(10px);
  }

  .customer-reset__field {
    margin-bottom: 24px;
  }

  .customer-reset__label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: #FFFFFF;
    margin-bottom: 8px;
  }

  .customer-reset__input {
    width: 100%;
    padding: 12px 16px;
    background: #FFFFFF;
    border: 2px solid #000000;
    border-radius: 8px;
    font-size: 1rem;
    color: #000000;
    transition: all 0.3s ease;
  }

  .customer-reset__input:focus {
    outline: none;
    border-color: var(--color-brand-yellow);
    box-shadow: 0 0 0 3px rgba(218, 241, 13, 0.1);
  }

  .customer-reset__submit {
    width: 100%;
    padding: 14px 32px;
    background: var(--color-brand-yellow);
    color: #000000;
    font-size: 1rem;
    font-weight: 600;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .customer-reset__submit:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  .customer-reset__back {
    margin-top: 24px;
    text-align: center;
  }

  .customer-reset__back-link {
    color: var(--color-brand-yellow);
    text-decoration: none;
    font-size: 0.875rem;
  }

  .customer-reset__errors {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid #EF4444;
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 24px;
    color: #EF4444;
    font-size: 0.875rem;
  }

  .customer-reset__success {
    background: rgba(16, 185, 129, 0.1);
    border: 1px solid #10B981;
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 24px;
    color: #10B981;
    font-size: 0.875rem;
  }
</style>

<div class="customer-reset">
  <div class="customer-reset__container">
    <div class="customer-reset__header">
      <h1 class="customer-reset__title">{{ 'customer.reset_password.title' | t }}</h1>
      <p class="customer-reset__subtitle">{{ 'customer.reset_password.subtitle' | t }}</p>
    </div>

    <div class="customer-reset__form">
      {%- form 'reset_customer_password' -%}
        {%- if form.errors -%}
          <div class="customer-reset__errors">
            {{ form.errors | default_errors }}
          </div>
        {%- endif -%}

        {%- if form.posted_successfully? -%}
          <div class="customer-reset__success">
            {{ 'customer.reset_password.success' | t }}
          </div>
        {%- endif -%}

        <div class="customer-reset__field">
          <label for="ResetPassword" class="customer-reset__label">
            {{ 'customer.reset_password.password' | t }}
          </label>
          <input
            type="password"
            name="customer[password]"
            id="ResetPassword"
            class="customer-reset__input"
            autocomplete="new-password"
            placeholder="{{ 'customer.reset_password.password_placeholder' | t }}"
            required
          >
        </div>

        <div class="customer-reset__field">
          <label for="ResetPasswordConfirm" class="customer-reset__label">
            {{ 'customer.reset_password.password_confirm' | t }}
          </label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="ResetPasswordConfirm"
            class="customer-reset__input"
            autocomplete="new-password"
            placeholder="{{ 'customer.reset_password.password_confirm_placeholder' | t }}"
            required
          >
        </div>

        <button type="submit" class="customer-reset__submit">
          {{ 'customer.reset_password.submit' | t }}
        </button>

        <div class="customer-reset__back">
          <a href="{{ routes.account_login_url }}" class="customer-reset__back-link">
            {{ 'customer.reset_password.cancel' | t }}
          </a>
        </div>
      {%- endform -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Customer Reset Password",
  "settings": []
}
{% endschema %}
