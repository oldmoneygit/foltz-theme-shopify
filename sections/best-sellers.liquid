<!--
  Section: Best Sellers
  Descrição: Produtos mais vendidos
-->

<style>
  /* MOBILE FIRST */
  .best-sellers {
    padding: 60px 0;
    background: #000000;
  }

  .best-sellers__container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 16px;
  }

  .best-sellers__header {
    text-align: center;
    margin-bottom: 32px;
  }

  .best-sellers__subtitle {
    color: #DAF10D;
    font-size: 0.75rem;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: 0.3em;
    margin-bottom: 8px;
    display: block;
  }

  .best-sellers__title {
    font-size: 1.75rem;
    font-weight: 900;
    color: #FFFFFF;
    margin-bottom: 16px;
  }

  .best-sellers__title--highlight {
    color: #DAF10D;
  }

  .best-sellers__description {
    color: #D1D5DB;
    font-size: 1rem;
    max-width: 42rem;
    margin: 0 auto;
  }

  .best-sellers__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }

  .best-sellers__cta {
    text-align: center;
    margin-top: 40px;
  }

  .best-sellers__button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: transparent;
    border: 2px solid #D4FF00;
    color: #D4FF00;
    font-weight: 700;
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    border-radius: 0.5rem;
    transition: all 0.3s ease;
    text-decoration: none;
    cursor: pointer;
  }

  .best-sellers__button:hover {
    background: #D4FF00;
    color: #000;
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(212, 255, 0, 0.3);
  }

  .best-sellers__button svg {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .best-sellers__button:hover svg {
    transform: translateX(4px);
  }

  @media (min-width: 750px) {
    .best-sellers {
      padding: 80px 0;
    }

    .best-sellers__container {
      padding: 0 24px;
    }

    .best-sellers__header {
      margin-bottom: 48px;
    }

    .best-sellers__subtitle {
      font-size: 0.875rem;
    }

    .best-sellers__title {
      font-size: 3rem;
    }

    .best-sellers__description {
      font-size: 1.125rem;
    }

    .best-sellers__grid {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 24px;
    }

    .best-sellers__cta {
      margin-top: 60px;
    }

    .best-sellers__button {
      font-size: 1rem;
      padding: 1.25rem 2.5rem;
    }
  }
</style>

<div class="best-sellers">
  <div class="best-sellers__container">
    <div class="best-sellers__header">
      <span class="best-sellers__subtitle">{{ section.settings.subtitle }}</span>
      <h2 class="best-sellers__title">
        {{ section.settings.title_prefix }} <span class="best-sellers__title--highlight">{{ section.settings.title_highlight }}</span>
      </h2>
      <p class="best-sellers__description">{{ section.settings.description }}</p>
    </div>

    <div class="best-sellers__grid">
      {%- assign collection = collections[section.settings.collection] -%}
      {%- if collection -%}
        {%- for product in collection.products limit: section.settings.products_to_show -%}
          {%- render 'product-card', product: product -%}
        {%- endfor -%}
      {%- endif -%}
    </div>

    {%- if section.settings.show_view_all_button and collection -%}
      <div class="best-sellers__cta">
        <a href="{{ collection.url }}" class="best-sellers__button">
          {{ section.settings.button_text }}
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Best Sellers",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Lo Más Vendido"
    },
    {
      "type": "text",
      "id": "title_prefix",
      "label": "Title Prefix",
      "default": "NUESTROS"
    },
    {
      "type": "text",
      "id": "title_highlight",
      "label": "Title Highlight (Yellow)",
      "default": "BEST SELLERS"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Calidad premium 1:1. Réplicas idénticas fabricadas en las mismas fábricas que las grandes marcas."
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 4,
      "max": 12,
      "step": 1,
      "default": 8
    },
    {
      "type": "checkbox",
      "id": "show_view_all_button",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "VER TODA LA COLECCIÓN"
    }
  ],
  "presets": [
    {
      "name": "Best Sellers"
    }
  ]
}
{% endschema %}
