{% comment %}
  Main Collection Page
  Página completa de coleção com design moderno
{% endcomment %}

{%- paginate collection.products by 24 -%}
<div class="collection-page">
  {%- comment %} Hero Header {%- endcomment -%}
  <div class="collection-hero">
    <div class="collection-hero__container">
      <div class="collection-hero__badge">Colección</div>
      <h1 class="collection-hero__title">{{ collection.title }}</h1>

      {%- if collection.description != blank -%}
        <p class="collection-hero__description">{{ collection.description }}</p>
      {%- endif -%}

      <div class="collection-hero__stats">
        <span class="collection-hero__stat">
          {{ collection.products_count }}
          {% if collection.products_count == 1 %}
            Producto
          {% else %}
            Productos
          {% endif %}
        </span>
      </div>
    </div>
  </div>

  {%- comment %} Toolbar {%- endcomment -%}
  <div class="collection-toolbar">
    <div class="collection-toolbar__container">
      <div class="collection-toolbar__info">
        Mostrando
        <strong>{{ paginate.current_offset | plus: 1 }}-{{ paginate.current_offset | plus: paginate.page_size | at_most: collection.products_count }}</strong>
        de <strong>{{ collection.products_count }}</strong> productos
      </div>

      <div class="collection-toolbar__actions">
        <label for="sort-select" class="collection-toolbar__label">Ordenar por:</label>
        <select id="sort-select" class="collection-toolbar__sort" onchange="window.location.href=this.value">
          {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
          <option value="{{ collection.url }}?sort_by=manual" {% if sort_by == 'manual' %}selected{% endif %}>
            Destacados
          </option>
          <option value="{{ collection.url }}?sort_by=best-selling" {% if sort_by == 'best-selling' %}selected{% endif %}>
            Más vendidos
          </option>
          <option value="{{ collection.url }}?sort_by=title-ascending" {% if sort_by == 'title-ascending' %}selected{% endif %}>
            A-Z
          </option>
          <option value="{{ collection.url }}?sort_by=title-descending" {% if sort_by == 'title-descending' %}selected{% endif %}>
            Z-A
          </option>
          <option value="{{ collection.url }}?sort_by=price-ascending" {% if sort_by == 'price-ascending' %}selected{% endif %}>
            Precio: Menor a Mayor
          </option>
          <option value="{{ collection.url }}?sort_by=price-descending" {% if sort_by == 'price-descending' %}selected{% endif %}>
            Precio: Mayor a Menor
          </option>
          <option value="{{ collection.url }}?sort_by=created-descending" {% if sort_by == 'created-descending' %}selected{% endif %}>
            Más recientes
          </option>
        </select>
      </div>
    </div>
  </div>

  {%- comment %} Products Grid {%- endcomment -%}
  <div class="collection-products">
    <div class="collection-products__container">
      {%- if collection.products.size > 0 -%}
        <div class="collection-products__grid">
          {%- for product in collection.products -%}
            <a href="{{ product.url }}" class="product-card">
              <div class="product-card__image-wrapper">
                {%- if product.featured_image -%}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="product-card__image"
                    loading="lazy"
                    width="600"
                    height="600"
                  >
                {%- else -%}
                  <div class="product-card__image-placeholder">
                    <svg width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                      <circle cx="8.5" cy="8.5" r="1.5"></circle>
                      <polyline points="21 15 16 10 5 21"></polyline>
                    </svg>
                  </div>
                {%- endif -%}
                <div class="product-card__overlay"></div>
              </div>

              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>
                <div class="product-card__price">
                  {%- if product.compare_at_price > product.price -%}
                    <span class="product-card__price--sale">{{ product.price | money }}</span>
                    <span class="product-card__price--compare">{{ product.compare_at_price | money }}</span>
                  {%- else -%}
                    <span class="product-card__price--regular">{{ product.price | money }}</span>
                  {%- endif -%}
                </div>
              </div>
            </a>
          {%- endfor -%}
        </div>

        {%- comment %} Pagination {%- endcomment -%}
        {%- if paginate.pages > 1 -%}
          <div class="collection-pagination">
            {%- if paginate.previous -%}
              <a href="{{ paginate.previous.url }}" class="collection-pagination__btn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                Anterior
              </a>
            {%- else -%}
              <span class="collection-pagination__btn collection-pagination__btn--disabled">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
                Anterior
              </span>
            {%- endif -%}

            <div class="collection-pagination__pages">
              Página {{ paginate.current_page }} de {{ paginate.pages }}
            </div>

            {%- if paginate.next -%}
              <a href="{{ paginate.next.url }}" class="collection-pagination__btn">
                Siguiente
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </a>
            {%- else -%}
              <span class="collection-pagination__btn collection-pagination__btn--disabled">
                Siguiente
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </span>
            {%- endif -%}
          </div>
        {%- endif -%}
      {%- else -%}
        <div class="collection-empty">
          <div class="collection-empty__icon">
            <svg width="120" height="120" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="8" x2="12" y2="12"></line>
              <line x1="12" y1="16" x2="12.01" y2="16"></line>
            </svg>
          </div>
          <h2 class="collection-empty__title">No hay productos en esta colección</h2>
          <p class="collection-empty__text">Parece que esta colección está vacía por ahora.</p>
          <a href="/collections/all" class="collection-empty__btn">
            Ver todos los productos
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>
{%- endpaginate -%}

<style>
/* Collection Page - Diseño moderno */
.collection-page {
  background: linear-gradient(to bottom, #000, #09090b, #000);
  min-height: 100vh;
}

/* Hero Header */
.collection-hero {
  padding: 4rem 0 3rem;
  border-bottom: 1px solid rgba(212, 255, 0, 0.2);
  background: linear-gradient(135deg, rgba(212, 255, 0, 0.03) 0%, transparent 100%);
}

.collection-hero__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 1.5rem;
  text-align: center;
}

.collection-hero__badge {
  display: inline-block;
  padding: 0.5rem 1rem;
  background: rgba(212, 255, 0, 0.1);
  border: 1px solid rgba(212, 255, 0, 0.3);
  border-radius: 2rem;
  color: #D4FF00;
  font-size: 0.75rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
  margin-bottom: 1.5rem;
}

.collection-hero__title {
  font-size: 3rem;
  font-weight: 900;
  color: #fff;
  text-transform: uppercase;
  margin-bottom: 1rem;
  letter-spacing: 0.02em;
}

@media (max-width: 768px) {
  .collection-hero__title {
    font-size: 2rem;
  }
}

.collection-hero__description {
  font-size: 1.125rem;
  color: rgb(156, 163, 175);
  max-width: 700px;
  margin: 0 auto 2rem;
  line-height: 1.7;
}

@media (max-width: 768px) {
  .collection-hero__description {
    font-size: 1rem;
  }
}

.collection-hero__stats {
  display: flex;
  gap: 2rem;
  justify-content: center;
  flex-wrap: wrap;
}

.collection-hero__stat {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.6);
}

.collection-hero__stat strong {
  color: #D4FF00;
  font-weight: 700;
}

/* Toolbar */
.collection-toolbar {
  padding: 1.5rem 0;
  background: rgba(255, 255, 255, 0.02);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  position: sticky;
  top: 0;
  z-index: 50;
  backdrop-filter: blur(10px);
}

.collection-toolbar__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  gap: 1rem;
}

.collection-toolbar__info {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.6);
}

.collection-toolbar__info strong {
  color: #fff;
}

.collection-toolbar__actions {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.collection-toolbar__label {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.6);
}

@media (max-width: 640px) {
  .collection-toolbar__label {
    display: none;
  }
}

.collection-toolbar__sort {
  padding: 0.625rem 1rem;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 0.5rem;
  color: #fff;
  font-size: 0.875rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.collection-toolbar__sort:hover {
  border-color: #D4FF00;
  background: rgba(212, 255, 0, 0.05);
}

.collection-toolbar__sort:focus {
  outline: none;
  border-color: #D4FF00;
  box-shadow: 0 0 0 3px rgba(212, 255, 0, 0.1);
}

.collection-toolbar__sort option {
  background: #fff;
  color: #000;
  padding: 0.5rem;
}

/* Products Grid */
.collection-products {
  padding: 3rem 0 5rem;
}

.collection-products__container {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 1.5rem;
}

.collection-products__grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 2rem;
}

@media (max-width: 768px) {
  .collection-products__grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }
}

/* Product Card */
.product-card {
  display: flex;
  flex-direction: column;
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(255, 255, 255, 0.05);
  border-radius: 1rem;
  overflow: hidden;
  transition: all 0.3s ease;
  text-decoration: none;
}

.product-card:hover {
  transform: translateY(-4px);
  border-color: rgba(212, 255, 0, 0.3);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
}

.product-card__image-wrapper {
  position: relative;
  aspect-ratio: 1;
  overflow: hidden;
  background: rgba(255, 255, 255, 0.03);
}

.product-card__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.product-card:hover .product-card__image {
  transform: scale(1.05);
}

.product-card__image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.2);
}

.product-card__overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to bottom, transparent 0%, rgba(0, 0, 0, 0.7) 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.product-card:hover .product-card__overlay {
  opacity: 1;
}

.product-card__info {
  padding: 1.25rem;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

@media (max-width: 768px) {
  .product-card__info {
    padding: 1rem;
  }
}

.product-card__title {
  font-size: 1rem;
  font-weight: 600;
  color: #fff;
  margin: 0;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

@media (max-width: 768px) {
  .product-card__title {
    font-size: 0.875rem;
  }
}

.product-card__price {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.product-card__price--sale {
  font-size: 1.125rem;
  font-weight: 700;
  color: #D4FF00;
}

.product-card__price--compare {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.4);
  text-decoration: line-through;
}

.product-card__price--regular {
  font-size: 1.125rem;
  font-weight: 700;
  color: #fff;
}

/* Pagination */
.collection-pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 1.5rem;
  margin-top: 4rem;
  padding-top: 3rem;
  border-top: 1px solid rgba(255, 255, 255, 0.05);
}

.collection-pagination__btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.75rem 1.5rem;
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 0.5rem;
  color: #fff;
  font-size: 0.875rem;
  font-weight: 600;
  text-decoration: none;
  transition: all 0.3s ease;
}

.collection-pagination__btn:hover:not(.collection-pagination__btn--disabled) {
  background: #D4FF00;
  border-color: #D4FF00;
  color: #000;
  transform: translateY(-2px);
}

.collection-pagination__btn--disabled {
  opacity: 0.4;
  cursor: not-allowed;
}

.collection-pagination__pages {
  font-size: 0.875rem;
  color: rgba(255, 255, 255, 0.6);
}

/* Empty State */
.collection-empty {
  text-align: center;
  padding: 5rem 1rem;
}

.collection-empty__icon {
  margin-bottom: 2rem;
  color: rgba(212, 255, 0, 0.3);
}

.collection-empty__title {
  font-size: 2rem;
  font-weight: 700;
  color: #fff;
  margin-bottom: 1rem;
}

.collection-empty__text {
  font-size: 1.125rem;
  color: rgba(255, 255, 255, 0.6);
  margin-bottom: 2rem;
}

.collection-empty__btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 1rem 2rem;
  background: #D4FF00;
  border: none;
  border-radius: 0.5rem;
  color: #000;
  font-size: 0.9375rem;
  font-weight: 700;
  text-transform: uppercase;
  text-decoration: none;
  letter-spacing: 0.05em;
  transition: all 0.3s ease;
}

.collection-empty__btn:hover {
  background: #fff;
  transform: scale(1.05);
  box-shadow: 0 10px 25px rgba(212, 255, 0, 0.25);
}
</style>

{% schema %}
{
  "name": "Collection Main",
  "tag": "section",
  "class": "section-collection-main",
  "settings": []
}
{% endschema %}
