<style>
  .product {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    padding: 16px;
    padding-bottom: 32px;
    max-width: var(--container-max-width, 1400px);
    margin: 0 auto;
    background: #000000;
  }

  @media screen and (min-width: 768px) {
    .product {
      gap: 32px;
      padding: 32px 24px;
      padding-bottom: 48px;
    }
  }

  @media screen and (min-width: 1000px) {
    .product {
      grid-template-columns: 1fr 1fr;
      gap: 48px;
      padding: 48px 24px;
      padding-bottom: 64px;
    }
  }
</style>

{%- capture product_form_id -%}product-form-{{ section.id }}{%- endcapture -%}

<div class="product">
  {%- if product.media.size > 0 -%}
    <div class="product__gallery">
      {%- render 'product-gallery', product: product, section: section -%}
    </div>
  {%- endif -%}

  <div class="product__info">
    {%- render 'product-info', product: product, section: section, product_form_id: product_form_id -%}
  </div>
</div>

