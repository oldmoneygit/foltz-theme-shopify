<style>
  .product {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
    padding: var(--spacing-8) var(--container-gutter);
    max-width: var(--container-max-width, 1400px);
    margin: 0 auto;
    background: #000000;
  }

  @media screen and (min-width: 1000px) {
    .product {
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-12);
    }
  }
</style>

{%- assign product_form_id -%}product-form-{{ section.id }}{%- endassign -%}

<div class="product">
  {%- if product.media.size > 0 -%}
    <div class="product__gallery">
      {%- render 'product-gallery', product: product, section: section -%}
    </div>
  {%- endif -%}

  <div class="product__info">
    {%- render 'product-info', product: product, section: section, product_form_id: product_form_id -%}
  </div>
</div>

{% schema %}
{
  "name": "Product Information",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_image_zoom",
      "label": "Enable image zoom",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_video_looping",
      "label": "Enable video looping",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "vendor",
      "name": "Vendor",
      "limit": 1
    },
    {
      "type": "title",
      "name": "Title",
      "limit": 1
    },
    {
      "type": "price",
      "name": "Price",
      "limit": 1
    },
    {
      "type": "variant_picker",
      "name": "Variant Picker",
      "limit": 1
    },
    {
      "type": "quantity",
      "name": "Quantity Selector",
      "limit": 1
    },
    {
      "type": "buy_buttons",
      "name": "Buy Buttons",
      "limit": 1
    },
    {
      "type": "description",
      "name": "Description",
      "limit": 1
    },
    {
      "type": "share",
      "name": "Share",
      "limit": 1
    }
  ]
}
{% endschema %}
