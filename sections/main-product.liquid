{%- capture product_form_id -%}product-form-{{ section.id }}{%- endcapture -%}

<style>
  /* Mobile-First Responsive Design - Match Next.js Exactly */

  .product-page {
    min-height: 100vh;
    background: #000000;
    color: #FFFFFF;
  }

  /* Container System - Matches Next.js container mx-auto px-4 */
  .product-page__container {
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
    padding-left: 16px;
    padding-right: 16px;
    width: 100%;
    box-sizing: border-box;
  }

  /* Mobile: remover padding lateral */
  @media screen and (max-width: 749px) {
    .product-page__container {
      padding-left: 0;
      padding-right: 0;
    }
  }

  /* Back Button Section */
  .product-page__back-wrapper {
    padding-top: 24px;
    padding-bottom: 16px;
  }

  @media screen and (min-width: 750px) {
    .product-page__back-wrapper {
      padding-top: 32px;
      padding-bottom: 24px;
    }
  }

  .product-page__back {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  @media screen and (min-width: 750px) {
    .product-page__back {
      font-size: 1rem;
    }
  }

  .product-page__back:hover {
    color: #DAF10D;
  }

  .product-page__back svg {
    width: 16px;
    height: 16px;
  }

  /* Product Grid - Matches Next.js grid-cols-1 lg:grid-cols-2 gap-6 md:gap-8 lg:gap-12 */
  .product-page__content {
    padding-bottom: 32px;
  }

  @media screen and (min-width: 750px) {
    .product-page__content {
      padding-bottom: 48px;
    }
  }

  .product {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    box-sizing: border-box;
  }

  @media screen and (min-width: 750px) {
    .product {
      gap: 32px;
    }
  }

  @media screen and (min-width: 990px) {
    .product {
      grid-template-columns: 1fr 1fr;
      gap: 48px;
    }
  }

  .product__gallery {
    width: 100%;
    box-sizing: border-box;
    padding-left: 16px;
    padding-right: 16px;
  }

  .product__info {
    width: 100%;
    box-sizing: border-box;
  }

  /* Mobile: adicionar padding interno no conte√∫do */
  @media screen and (max-width: 749px) {
    .product__info {
      padding-left: 16px;
      padding-right: 16px;
    }

    .product-page__back-wrapper {
      padding-left: 16px;
      padding-right: 16px;
    }
  }
</style>

<div class="product-page">
  {%- comment %} Back Button Section {%- endcomment -%}
  <div class="product-page__container">
    <div class="product-page__back-wrapper">
      <a href="{{ routes.root_url }}" class="product-page__back">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
        Volver a la tienda
      </a>
    </div>
  </div>

  {%- comment %} Product Section {%- endcomment -%}
  <div class="product-page__container">
    <div class="product-page__content">
      <div class="product">
        {%- comment %} Left Column - Gallery {%- endcomment -%}
        {%- if product.media.size > 0 -%}
          <div class="product__gallery">
            {%- render 'product-gallery', product: product, section: section -%}
          </div>
        {%- endif -%}

        {%- comment %} Right Column - Product Info {%- endcomment -%}
        <div class="product__info">
          {%- render 'product-info', product: product, section: section, product_form_id: product_form_id -%}
        </div>
      </div>
    </div>
  </div>
</div>

