  {
    "name": "Typography",
    "settings": [
      {
        "type": "header",
        "content": "Font Family"
      },
      {
        "type": "font_picker",
        "id": "font_body",
        "label": "Body Font",
        "default": "assistant_n4",
        "info": "Used for body text and descriptions"
      },
      {
        "type": "font_picker",
        "id": "font_heading",
        "label": "Heading Font",
        "default": "assistant_n7",
        "info": "Used for headings and titles"
      },
      {
        "type": "header",
        "content": "Font Sizes"
      },
      {
        "type": "range",
        "id": "font_size_base",
        "label": "Base Font Size",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "default": 16
      },
      {
        "type": "range",
        "id": "font_size_h1",
        "label": "H1 Size",
        "min": 32,
        "max": 72,
        "step": 2,
        "unit": "px",
        "default": 48
      },
      {
        "type": "range",
        "id": "font_size_h2",
        "label": "H2 Size",
        "min": 24,
        "max": 56,
        "step": 2,
        "unit": "px",
        "default": 40
      },
      {
        "type": "range",
        "id": "font_size_h3",
        "label": "H3 Size",
        "min": 20,
        "max": 40,
        "step": 2,
        "unit": "px",
        "default": 32
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "header",
        "content": "Announcement Bar"
      },
      {
        "type": "checkbox",
        "id": "header_show_announcement",
        "label": "Show announcement bar",
        "default": true
      },
      {
        "type": "text",
        "id": "header_announcement_text",
        "label": "Announcement text",
        "default": "Free shipping on orders over $100"
      },
      {
        "type": "url",
        "id": "header_announcement_link",
        "label": "Announcement link"
      },
      {
        "type": "color",
        "id": "header_announcement_bg",
        "label": "Background color",
        "default": "#DAF10D"
      },
      {
        "type": "color",
        "id": "header_announcement_text_color",
        "label": "Text color",
        "default": "#000000"
      },
      {
        "type": "header",
        "content": "Logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Logo width",
        "min": 80,
        "max": 300,
        "step": 10,
        "unit": "px",
        "default": 150
      },
      {
        "type": "header",
        "content": "Header Settings"
      },
      {
        "type": "checkbox",
        "id": "header_sticky",
