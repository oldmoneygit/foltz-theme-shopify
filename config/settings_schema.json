        "type": "select",
        "id": "header_cart_type",
        "label": "Cart type",
        "options": [
          {
            "value": "drawer",
            "label": "Drawer (slides from side)"
          },
          {
            "value": "page",
            "label": "Page (navigates to cart page)"
          }
        ],
        "default": "drawer"
      }
    ]
  },
